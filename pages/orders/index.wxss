/* pages/orders/index.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
  background: #f5f5f5;
}

/* 状态筛选栏 */
.status-filter {
  display: flex;
  background: #fff;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #555555;
  position: relative;
  font-weight: 400;
}

.filter-item.active {
  color: #09ccb5;
  font-weight: 500;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #09ccb5;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0;
}

.order-item {
  background: #fff;
  margin: 0 0 16rpx 0;
  border-radius: 0;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: none;
}

.order-item:first-child {
  border-top: 1rpx solid #f0f0f0;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
  flex-wrap: nowrap;
  width: 100%;
}

.order-no {
  font-size: 26rpx;
  color: #999;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
  line-height: 1.5;
}

.order-status {
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
  white-space: nowrap;
  line-height: 1.5;
}

.order-status.status-progress {
  color: #09ccb5;
}

.order-status.status-completed {
  color: #09ccb5;
}

.order-status.status-canceled {
  color: #999;
}

/* 订单内容 */
.order-content {
  margin-bottom: 16rpx;
}

.order-type-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  margin-bottom: 20rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-info-item {
  display: flex;
  font-size: 28rpx;
  color: #555555;
  line-height: 1.5;
}

.order-info-item .label {
  color: #999;
  min-width: 140rpx;
  flex-shrink: 0;
}

.order-info-item .value {
  color: #555555;
  flex: 1;
  word-break: break-all;
}

.order-info-item .value.price {
  color: #ff4757;
  font-weight: 500;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.order-amount-total {
  font-size: 30rpx;
  font-weight: 500;
  color: #ff4757;
}

/* 加载更多 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 24rpx;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  margin: 120rpx auto 0;
  width: 80%;
  text-align: center;
  color: #8a8a8e;
  font-size: 28rpx;
}
