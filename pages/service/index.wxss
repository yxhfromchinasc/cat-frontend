.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 16rpx;
}

.service-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.service-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.service-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111;
  display: block;
  margin-bottom: 12rpx;
}

.service-desc {
  font-size: 26rpx;
  color: #8a8a8e;
  display: block;
}

.service-content {
  margin-top: 40rpx;
}

.service-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.service-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.item-label {
  font-size: 26rpx;
  color: #8a8a8e;
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 32rpx;
  color: #111;
  font-weight: 500;
  word-break: break-all;
}

.action-btn {
  flex-shrink: 0;
  margin-left: 24rpx;
  padding: 0;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 120rpx;
  text-align: center;
}

.action-btn::after {
  border: none;
}

.call-btn {
  background: #07c160;
  color: #fff;
  border: none;
}

.copy-btn {
  background: #fff;
  color: #07c160;
  border: 1rpx solid #07c160;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #fff;
}

