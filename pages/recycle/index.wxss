/* pages/recycle/index.wxss */
.recycle-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

.scroll-area {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 提交按钮卡片（放在表单内部，与其他card样式一致） */
.submit-card {
  /* card类已经有margin和padding，这里只需要确保底部有足够间距 */
  margin-bottom: 24rpx;
}

/* 提交按钮提示信息 */
.submit-tip {
  color: #ff4444;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 16rpx;
  line-height: 1.5;
  padding: 0 20rpx;
}

/* 底部安全空白区域（适配iOS等设备的安全区域） */
.safe-area-bottom {
  height: calc(24rpx + env(safe-area-inset-bottom));
  min-height: 24rpx;
  flex-shrink: 0;
}

.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 用于合并卡片组的样式 */
.card-group-top {
  background: #fff;
  margin: 24rpx 24rpx 0 24rpx; /* 底部无间距 */
  border-radius: 16rpx 16rpx 0 0; /* 底部无圆角 */
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-group-bottom {
  background: #fff;
  margin: 0 24rpx 24rpx 24rpx; /* 顶部无间距 */
  border-radius: 0 0 16rpx 16rpx; /* 顶部无圆角 */
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-top: 1rpx solid #f0f0f0; /* 添加顶部边框作为分隔线 */
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.address-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.address-item.selected {
  border-color: #09ccb5;
  background: #f0f4ff;
}

.address-content {
  flex: 1;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}

.contact-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.address-tags {
  margin-top: 8rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.tag.default {
  background: #09ccb5;
  color: #fff;
}

.address-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #09ccb5;
  font-weight: bold;
}

.empty-tip {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 单个地址显示 */
.address-single {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 0;
  border: none;
  transition: all 0.3s;
}

.address-single:active {
  background: #f5f5f5;
}

.address-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.location-icon {
  width: 80rpx;
  height: 80rpx;
}

.address-content {
  flex: 1;
  min-width: 0;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.contact-phone {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.address-detail {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

.address-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 去添加地址按钮 */
.address-empty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}

.address-empty:active {
  background: #f0f4ff;
  border-color: #09ccb5;
}

.empty-text {
  font-size: 28rpx;
  color: #09ccb5;
}

/* 回收点提示 */
.recycling-point-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background: #f7f8fa;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.5;
}

.tip-text.success {
  color: #09ccb5;
}

.tip-text.error {
  color: #ff4757;
}

/* 表单 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item.checkbox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.checkbox-item .label {
  margin-bottom: 0;
}

.urgent-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.urgent-tip-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

/* 今日回收价格卡片 */
.price-card {
  margin-top: 16rpx;
}

.price-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.price-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #09ccb5;
  margin-right: 12rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-main {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #09ccb5;
}

.price-unit {
  font-size: 26rpx;
  color: #666;
}

.price-separator {
  font-size: 28rpx;
  color: #666;
  margin: 0 4rpx;
}

.price-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.7;
  margin-top: 12rpx;
}

/* 价格特别说明（未整理成捆的装修废料按0.3结算） */
.price-notice {
  margin-top: 24rpx;
  padding: 20rpx 24rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  border-left: 6rpx solid #d0d3d9;
}

.price-notice-text {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

.price-notice-highlight {
  color: #333;
  font-weight: 600;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

/* 物品备注文本框 */
.item-remark-textarea {
  min-height: 50rpx;
  max-height: 80rpx;
}

/* 快捷选项 */
.quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.quick-option-item {
  padding: 12rpx 24rpx;
  background: #f0f4ff;
  border: 1rpx solid #09ccb5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #09ccb5;
  cursor: pointer;
  transition: all 0.3s;
}

.quick-option-item-hover {
  background: #09ccb5;
  color: #fff;
}

/* 图片上传 */
.image-upload-container {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-image-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn:active {
  background: #f5f5f5;
  border-color: #09ccb5;
}

.upload-placeholder-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 时间选择器 */
.time-selector-row {
  display: flex;
  gap: 24rpx;
}

.time-selector-item {
  flex: 1;
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111;
}

.picker-field.disabled {
  background: #f0f0f0;
  color: #999;
}

.placeholder-text {
  color: #999;
}

.disabled-text {
  color: #999;
  text-decoration: line-through;
}

.selected-time-display {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
}

.immediate-time-display {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
}

.selected-time-text {
  font-size: 26rpx;
  color: #09ccb5;
  font-weight: 500;
}

/* 预约时间选择器 */
.appointment-time-selector {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 0;
  border: none;
}

.appointment-time-selector:active {
  background: #f5f5f5;
}

.time-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.clock-icon {
  width: 80rpx;
  height: 80rpx;
}

.time-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.time-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  margin-bottom: 8rpx;
}

.time-placeholder {
  font-size: 26rpx;
  color: #999;
}

.time-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 时间选择器弹窗 */
.time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 9999;
  pointer-events: auto;
}

.time-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.time-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-picker-cancel {
  font-size: 28rpx;
  color: #666;
}

.time-picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #111;
}

.time-picker-confirm {
  font-size: 28rpx;
  color: #09ccb5;
}

/* 提交按钮（放在表单内部card中） */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a0 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}
