/* pages/recycle/index.wxss */
.recycle-page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

.scroll-area {
  height: calc(100vh - 120rpx);
}

.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.address-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.address-item.selected {
  border-color: #09ccb5;
  background: #f0f4ff;
}

.address-content {
  flex: 1;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}

.contact-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.address-tags {
  margin-top: 8rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.tag.default {
  background: #09ccb5;
  color: #fff;
}

.address-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #09ccb5;
  font-weight: bold;
}

.empty-tip {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 单个地址显示 */
.address-single {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.address-single:active {
  background: #f0f4ff;
}

.address-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 去添加地址按钮 */
.address-empty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}

.address-empty:active {
  background: #f0f4ff;
  border-color: #09ccb5;
}

.empty-text {
  font-size: 28rpx;
  color: #09ccb5;
}

/* 回收点提示 */
.recycling-point-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background: #f7f8fa;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.5;
}

.tip-text.success {
  color: #09ccb5;
}

.tip-text.error {
  color: #ff4757;
}

/* 表单 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item.checkbox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.checkbox-item .label {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

/* 图片上传 */
.image-upload-container {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-image-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #f7f8fa;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.upload-btn:active {
  background: #f0f0f0;
  border-color: #09ccb5;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 时间选择器 */
.time-selector-row {
  display: flex;
  gap: 24rpx;
}

.time-selector-item {
  flex: 1;
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111;
}

.picker-field.disabled {
  background: #f0f0f0;
  color: #999;
}

.placeholder-text {
  color: #999;
}

.disabled-text {
  color: #999;
  text-decoration: line-through;
}

.selected-time-display {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
}

.immediate-time-display {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
}

.selected-time-text {
  font-size: 26rpx;
  color: #09ccb5;
  font-weight: 500;
}

/* 提交按钮 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a0 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background: #e5e6eb;
  color: #999;
}
