/* pages/recycle/index.wxss */
.recycle-page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

.scroll-area {
  height: calc(100vh - 120rpx);
}

.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.address-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.address-item.selected {
  border-color: #667eea;
  background: #f0f4ff;
}

.address-content {
  flex: 1;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}

.contact-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.address-tags {
  margin-top: 8rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.tag.default {
  background: #667eea;
  color: #fff;
}

.address-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

.empty-tip {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 回收点提示 */
.recycling-point-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background: #f7f8fa;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.5;
}

.tip-text.success {
  color: #52c41a;
}

.tip-text.error {
  color: #ff4757;
}

/* 表单 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.item-description-textarea {
  min-height: 180rpx;
}

/* 快捷选项 */
.quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.quick-option-item {
  padding: 12rpx 24rpx;
  background: #f0f4ff;
  border: 1rpx solid #667eea;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #667eea;
  transition: all 0.3s;
}

.quick-option-item:active {
  background: #667eea;
  color: #fff;
}

/* 时间选择器 */
.time-selector-row {
  display: flex;
  gap: 24rpx;
}

.time-selector-item {
  flex: 1;
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111;
}

.picker-field.disabled {
  background: #f0f0f0;
  color: #999;
}

.placeholder-text {
  color: #999;
}

.selected-time-display {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
}

.selected-time-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 提交按钮 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #667eea;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background: #e5e6eb;
  color: #999;
}
