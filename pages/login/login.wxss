/* pages/login/login.wxss */
page {
  background: #f7f8fa;
}

.login-container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 80rpx 0 60rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #8a8a8e;
}

/* 登录卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.shadow {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.login-card {
  margin-bottom: 0;
}

/* 登录方式切换 */
.tabs {
  display: flex;
  background: #f2f3f5;
  border-radius: 12rpx;
  padding: 6rpx;
  margin-bottom: 32rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab.active {
  background: #ffffff;
  color: #07c160;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 内容区域 */
.content {
  padding: 20rpx 0;
}

/* 微信登录 */
.wechat-info {
  text-align: center;
  margin-bottom: 32rpx;
}

.wechat-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.wechat-text {
  font-size: 28rpx;
  color: #666;
}

.wechat-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 表单 */
.form-group {
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  color: #111;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
  background: #ffffff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #07c160;
}

.code-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.code-input {
  flex: 1;
}

.send-btn {
  height: 88rpx;
  padding: 0 24rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  white-space: nowrap;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  min-width: 160rpx;
  box-sizing: border-box;
}

.send-btn.disabled {
  background: #cccccc;
  color: #999999;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 20rpx;
}

.login-btn.disabled {
  background: #cccccc;
  color: #999999;
}

.login-btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 60rpx;
  left: 24rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #111;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-btn-hover {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.95);
}

/* 手机号授权弹窗 */
.phone-auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.phone-auth-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin: 0 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  max-width: 500rpx;
  width: 100%;
}

.phone-auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 20rpx;
}

.phone-auth-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.phone-auth-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.phone-auth-btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.phone-auth-cancel {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: #666;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.phone-auth-cancel-hover {
  background: #f2f3f5;
  transform: scale(0.98);
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}