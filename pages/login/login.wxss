/* pages/login/login.wxss */
page {
  background: #ffffff;
}

.login-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0 60rpx;
  padding-top: 200rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* Logo和标题 */
.header {
  text-align: center;
  padding: 0 0 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 100rpx;
  line-height: 1;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 2rpx;
  font-weight: 400;
}

/* 登录按钮区域 */
.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  height: 88rpx;
  background: #f0f0f0;
  color: #333333;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-btn-hover {
  background: #e0e0e0;
}

/* 暂不登录按钮 */
.skip-btn {
  width: 100%;
  height: 88rpx;
  background: #f0f0f0;
  color: #333333;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
}

.skip-btn-hover {
  background: #e0e0e0;
}


/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 40rpx;
  left: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
  font-size: 36rpx;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-btn-hover {
  background: rgba(255, 255, 255, 1);
}

/* 手机号授权弹窗 */
.phone-auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.phone-auth-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin: 0 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  max-width: 500rpx;
  width: 100%;
}

.phone-auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 20rpx;
}

.phone-auth-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.phone-auth-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.phone-auth-btn-hover {
  background: #05a050;
}

.phone-auth-cancel {
  width: 100%;
  height: 88rpx;
  background: #f0f0f0;
  color: #333333;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.phone-auth-cancel-hover {
  background: #e0e0e0;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 协议同意 */
.protocol-section {
  padding: 0;
  margin-top: 80rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.protocol-checkbox {
  display: flex;
  align-items: center;
  gap: 12rpx;
  max-width: 600rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  background: #fff;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.checkbox-icon {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.protocol-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.protocol-link {
  color: #007aff;
  text-decoration: none;
}