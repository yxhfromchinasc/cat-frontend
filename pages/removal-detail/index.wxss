/* pages/removal-detail/index.wxss 与快递/回收详情页保持一致 */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 进度条（与 express/recycling 一致） */
.progress-section {
  flex-shrink: 0;
  background: #fff;
  padding: 40rpx 24rpx 32rpx;
  margin-bottom: 24rpx;
}
.progress-wrapper { padding: 0 20rpx; }
.progress-nodes { display: flex; justify-content: space-between; align-items: flex-start; }
.progress-node { display: flex; flex-direction: column; align-items: center; flex: 1; }
.node-container { display: flex; align-items: center; width: 100%; margin-bottom: 16rpx; }
.node-line { flex: 1; height: 4rpx; background: #e5e6eb; }
.node-line.completed { background: #09ccb5; }
.node-dot { width: 32rpx; height: 32rpx; border-radius: 50%; background: #e5e6eb; flex-shrink: 0; margin: 0 8rpx; }
.progress-node.completed .node-dot { background: #09ccb5; border-color: #09ccb5; }
.progress-node.active .node-dot { background: #fff; border: 3rpx solid #09ccb5; }
.progress-node.pending .node-dot { background: #e5e6eb; border-color: #e5e6eb; }
.node-label { font-size: 24rpx; text-align: center; color: #999; margin-top: 4rpx; }
.progress-node.completed .node-label { color: #111; font-weight: 500; }
.progress-node.active .node-label { color: #111; font-weight: 500; }

/* 时间线（与 recycling-detail 一致） */
.timeline-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.timeline-section {
  background: #fff;
  padding: 0 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}
.timeline-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.timeline-item:first-child { padding-top: 32rpx; }
.timeline-item:last-child { border-bottom: none; padding-bottom: 48rpx; }
.timeline-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  min-width: 40rpx;
}
.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 4rpx solid #e5e6eb;
  z-index: 2;
}
.timeline-dot.completed { background: #09ccb5; border-color: #09ccb5; }
.timeline-dot.waiting { background: #fff; border-color: #09ccb5; box-shadow: 0 0 0 4rpx rgba(9, 204, 181, 0.1); }
.timeline-dot.cancelled { background: #999; border-color: #999; }
.timeline-item.cancelled .timeline-dot { background: #fa5151; border-color: #fa5151; }
.timeline-item.cancelled .timeline-title { color: #fa5151; }
.timeline-item.cancelled .timeline-line { background: #fa5151; }
.timeline-line { width: 2rpx; flex: 1; background: #e5e6eb; margin-top: 8rpx; }
.timeline-content { flex: 1; }
.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: nowrap;
}
.timeline-title { font-size: 28rpx; font-weight: 500; color: #111; flex: 1; min-width: 0; margin-right: 16rpx; }
.timeline-title.cancelled { color: #999; text-decoration: line-through; }
.timeline-time { font-size: 24rpx; color: #999; flex-shrink: 0; white-space: nowrap; }
.urgent-tag { display: inline-block; padding: 4rpx 12rpx; background: #fff3cd; color: #856404; border-radius: 4rpx; font-size: 22rpx; margin-top: 8rpx; }
.timeline-info { display: flex; flex-direction: column; gap: 12rpx; }
.timeline-info .info-item { display: flex; align-items: flex-start; font-size: 28rpx; line-height: 1.5; min-height: 40rpx; }
.timeline-info .info-label { color: #999; min-width: 140rpx; flex-shrink: 0; }
.timeline-info .info-value { color: #333; flex: 1; word-break: break-all; }
.timeline-info .info-value.price { color: #ff6b00; font-weight: 500; }
.timeline-info .image-list { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 8rpx; }
.timeline-info .info-image { width: 160rpx; height: 160rpx; border-radius: 8rpx; background: #f5f5f5; }

/* 操作按钮区域（与 express-detail / recycling-detail 一致：非固定，避免遮挡时间线；含安全区） */
.actions-bar {
  flex-shrink: 0;
  background: #fff;
  border-top: 1rpx solid #e5e6eb;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.action-btn.pay-btn {
  background: #09ccb5;
  color: #fff;
}

.action-btn.cancel-payment-btn {
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
}

.action-btn.cancel-btn {
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200rpx;
  color: #999;
  font-size: 28rpx;
}
