/* pages/removal-detail/index.wxss */
.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

.progress-section {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.progress-wrapper { padding: 0 20rpx; }
.progress-nodes { display: flex; justify-content: space-between; align-items: flex-start; }
.progress-node { display: flex; flex-direction: column; align-items: center; flex: 1; }
.node-container { display: flex; align-items: center; width: 100%; margin-bottom: 16rpx; }
.node-line { flex: 1; height: 4rpx; background: #e5e6eb; }
.node-line.completed { background: #09ccb5; }
.node-dot { width: 32rpx; height: 32rpx; border-radius: 50%; background: #e5e6eb; flex-shrink: 0; margin: 0 8rpx; }
.progress-node.completed .node-dot { background: #09ccb5; }
.progress-node.active .node-dot { background: #fff; border: 3rpx solid #09ccb5; }
.progress-node.pending .node-dot { background: #e5e6eb; }
.node-label { font-size: 24rpx; text-align: center; color: #999; margin-top: 4rpx; }
.progress-node.completed .node-label { color: #111; font-weight: 500; }
.progress-node.active .node-label { color: #111; font-weight: 500; }

.courier-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.courier-info { display: flex; align-items: center; }
.courier-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 24rpx; }
.courier-text { display: flex; flex-direction: column; }
.courier-name { font-size: 30rpx; font-weight: 500; color: #111; }
.courier-desc { font-size: 24rpx; color: #999; margin-top: 8rpx; }
.courier-actions { display: flex; gap: 24rpx; }
.phone-btn, .contact-btn-small { width: 64rpx; height: 64rpx; }
.phone-icon, .contact-icon-small { width: 64rpx; height: 64rpx; }

.info-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.info-row { display: flex; margin-bottom: 16rpx; font-size: 28rpx; }
.info-row:last-child { margin-bottom: 0; }
.info-label { color: #999; width: 160rpx; flex-shrink: 0; }
.info-value { color: #111; flex: 1; word-break: break-all; }
.info-value.price { color: #ff6b00; font-weight: 500; }

.timeline-scroll { flex: 1; height: 400rpx; }
.timeline-section { padding: 24rpx; background: #fff; }
.timeline-item { display: flex; margin-bottom: 24rpx; }
.timeline-node { display: flex; flex-direction: column; align-items: center; margin-right: 24rpx; }
.timeline-dot { width: 24rpx; height: 24rpx; border-radius: 50%; background: #e5e6eb; }
.timeline-dot.completed { background: #09ccb5; }
.timeline-dot.waiting { border: 3rpx solid #09ccb5; background: #fff; }
.timeline-line { width: 4rpx; flex: 1; min-height: 24rpx; background: #e5e6eb; margin: 4rpx 0; }
.timeline-content { flex: 1; }
.timeline-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 8rpx; }
.timeline-title { font-size: 28rpx; color: #111; }
.timeline-title.cancelled { color: #999; text-decoration: line-through; }
.timeline-time { font-size: 24rpx; color: #999; }
.timeline-item.cancelled .timeline-title { color: #999; }
.timeline-dot.cancelled { background: #ccc; }
.urgent-tag { margin-top: 8rpx; margin-bottom: 8rpx; }
.urgent-tag text { font-size: 22rpx; color: #ff6b00; background: #fff3eb; padding: 4rpx 12rpx; border-radius: 8rpx; }
.timeline-info { margin-top: 8rpx; }
.timeline-info .info-item { display: flex; margin-bottom: 12rpx; font-size: 26rpx; align-items: flex-start; }
.timeline-info .info-item:last-child { margin-bottom: 0; }
.timeline-info .info-label { color: #999; width: 140rpx; flex-shrink: 0; }
.timeline-info .info-value { color: #333; flex: 1; word-break: break-all; }
.timeline-info .info-value.price { color: #ff6b00; font-weight: 500; }
.timeline-info .image-list { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 8rpx; }
.timeline-info .info-image { width: 160rpx; height: 160rpx; border-radius: 8rpx; background: #f5f5f5; }

.actions-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.06);
}
.action-btn { flex: 1; min-width: 200rpx; font-size: 28rpx; }
.action-btn.cancel-btn { background: #f5f5f5; color: #666; }
.action-btn.primary-btn { background: #09ccb5; color: #fff; }

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200rpx;
  color: #999;
  font-size: 28rpx;
}
