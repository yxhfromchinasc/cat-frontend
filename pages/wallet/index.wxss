.page{
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
  background: #f7f8fa;
  padding: 0;
}

.page-header {
  flex-shrink: 0;
  padding: 0;
}

/* 余额显示区域 */
.balance-section{
  background: #09ccb5;
  border-radius: 16rpx;
  padding: 60rpx 32rpx;
  margin: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

.balance-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.balance-label{
  font-size: 28rpx;
  color: #fff;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.balance-amount{
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
}

.balance-divider{
  width: 1rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 32rpx;
}

.card{
  background:#fff;
  border-radius:16rpx;
  padding:32rpx;
  margin:24rpx;
  margin-top: 0;
  box-shadow:0 8rpx 24rpx rgba(0,0,0,0.06)
}

.transaction-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-bottom: 0;
}

.section-title{font-size:28rpx;color:#111;font-weight:600;margin-bottom:20rpx}

.actions{display:flex;gap:24rpx}
.btn{flex:1;height:88rpx;border-radius:12rpx;background:#fff;border:1px solid #eaeaea;color:#111;font-size:28rpx;display:flex;align-items:center;justify-content:center}
.btn.primary{background:#09ccb5;color:#fff;border-color:#09ccb5}
.btn-text{font-size:28rpx}

.empty-state{text-align:center;padding:40rpx 0}
.empty-icon{font-size:64rpx;display:block;margin-bottom:12rpx}
.empty-text{font-size:26rpx;color:#8a8a8e}

/* 交易记录列表 */
.transaction-list{
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  margin-top:20rpx;
}
.transaction-item{display:flex;align-items:center;justify-content:space-between;padding:24rpx 0;border-bottom:1px solid #f0f0f0}
.transaction-item:last-child{border-bottom:none}

.transaction-left{display:flex;align-items:center;flex:1;gap:20rpx}
.transaction-icon{width:80rpx;height:80rpx;border-radius:12rpx;display:flex;align-items:center;justify-content:center;font-size:36rpx}
.transaction-info{flex:1}
.transaction-type{font-size:28rpx;color:#111;font-weight:500;margin-bottom:8rpx}
.transaction-desc{font-size:24rpx;color:#8a8a8e;margin-bottom:4rpx}
.transaction-time{font-size:22rpx;color:#b0b0b0}

.transaction-right{text-align:right}
.transaction-amount{font-size:30rpx;font-weight:600}
.transaction-amount.income{color:#4CAF50}
.transaction-amount.expense{color:#F44336}

/* 加载更多 */
.load-more{text-align:center;padding:30rpx 0}
.load-more-btn{color:#09ccb5;font-size:26rpx;padding:10rpx 0}
.load-more-text{color:#b0b0b0;font-size:24rpx}
.load-more-loading{color:#8a8a8e;font-size:24rpx}
