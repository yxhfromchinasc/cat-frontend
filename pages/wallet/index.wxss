.page{min-height:100vh;background:#f7f8fa;padding:24rpx}
.card{background:#fff;border-radius:16rpx;padding:32rpx;margin-bottom:16rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,0.06)}

.balance-section{text-align:center}
.label{color:#8a8a8e;font-size:26rpx}
.amount{margin-top:12rpx;font-size:52rpx;font-weight:700;color:#111}
.balance-desc{margin-top:8rpx;font-size:24rpx;color:#8a8a8e}

.section-title{font-size:28rpx;color:#111;font-weight:600;margin-bottom:20rpx}

.actions{display:flex;gap:24rpx}
.btn{flex:1;height:88rpx;border-radius:12rpx;background:#fff;border:1px solid #eaeaea;color:#111;font-size:28rpx;display:flex;align-items:center;justify-content:center;flex-direction:column;gap:4rpx}
.btn.primary{background:#667eea;color:#fff;border-color:#667eea}
.btn-icon{font-size:32rpx}
.btn-text{font-size:26rpx}

.empty-state{text-align:center;padding:40rpx 0}
.empty-icon{font-size:64rpx;display:block;margin-bottom:12rpx}
.empty-text{font-size:26rpx;color:#8a8a8e}
