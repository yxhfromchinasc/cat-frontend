/* pages/removal/index.wxss 大件清运发起页，样式与快递代取保持一致 */
.removal-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

.scroll-area {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.submit-card {
  margin-bottom: 24rpx;
}

.submit-tip {
  color: #ff4444;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 16rpx;
  line-height: 1.5;
  padding: 0 20rpx;
}

.safe-area-bottom {
  height: calc(24rpx + env(safe-area-inset-bottom));
  min-height: 24rpx;
  flex-shrink: 0;
}

.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.urgent-card {
  margin-bottom: 0;
  border-radius: 16rpx 16rpx 0 0;
}

.time-card {
  margin-top: 0;
  border-radius: 0 0 16rpx 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

/* 清运点提示（与回收页回收点提示一致） */
.recycling-point-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background: #f7f8fa;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.5;
}

.tip-text.success {
  color: #09ccb5;
}

.tip-text.error {
  color: #ff4757;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.item-remark-textarea {
  min-height: 80rpx;
  max-height: 160rpx;
}

/* 清运类型：按钮选择 */
.category-btns {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.category-btn {
  flex: 1;
  min-width: 0;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  background: #f5f6f8;
  border: 2rpx solid #e5e6eb;
  border-radius: 14rpx;
  transition: all 0.25s ease;
  letter-spacing: 2rpx;
}

.category-btn:active {
  opacity: 0.92;
  transform: scale(0.98);
}

.category-btn-active {
  color: #fff;
  font-weight: 600;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a0 100%);
  border-color: transparent;
  box-shadow: 0 6rpx 20rpx rgba(9, 204, 181, 0.4);
}

.category-btn-active:active {
  opacity: 1;
  transform: scale(0.98);
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111;
}

/* 地址 */
.address-single {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 0;
  border: none;
  transition: all 0.3s;
}

.address-single:active {
  background: #f5f5f5;
}

.address-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.location-icon {
  width: 80rpx;
  height: 80rpx;
}

.address-content {
  flex: 1;
  min-width: 0;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.contact-phone {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.address-detail {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

.address-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.address-empty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}

.address-empty:active {
  background: #f0f4ff;
  border-color: #09ccb5;
}

.empty-text {
  font-size: 28rpx;
  color: #09ccb5;
}

/* 时间选择 */
.appointment-time-selector {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 0;
  border: none;
}

.appointment-time-selector:active {
  background: #f5f5f5;
}

.time-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.clock-icon {
  width: 80rpx;
  height: 80rpx;
}

.time-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.time-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  margin-bottom: 8rpx;
}

.time-placeholder {
  font-size: 26rpx;
  color: #999;
}

.time-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 加急 */
.form-item.checkbox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.checkbox-item .label {
  margin-bottom: 0;
}

.urgent-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #333;
}

/* 图片上传 */
.image-upload-container {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-image-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn:active {
  background: #f5f5f5;
  border-color: #09ccb5;
}

.upload-placeholder-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a0 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}
