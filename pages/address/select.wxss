.page{
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f5f5;
}

.address-list{
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0;
}

.address-item{
  background: #fff;
  border-radius: 0;
  margin-bottom: 0;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
}

.address-item:first-child{
  border-top: 1rpx solid #f0f0f0;
}

.address-content{
  flex: 1;
  margin-right: 24rpx;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

/* 联系人信息（第一行） */
.contact-info{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.contact-name{
  font-size: 32rpx;
  color: #111;
  font-weight: 500;
  line-height: 1.5;
}

.contact-phone{
  font-size: 32rpx;
  color: #111;
  line-height: 1.5;
}

.address-tag{
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid #09ccb5;
  line-height: 1.2;
  flex-shrink: 0;
}

.address-tag.default{
  color: #09ccb5;
  background: transparent;
}

/* 地址信息（第二行） */
.address-text{
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

/* 选中图标 */
.select-icon{
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #09ccb5;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
}

/* 没有更多数据了 */
.no-more{
  text-align: center;
  padding: 40rpx 24rpx;
}

.no-more-text{
  font-size: 26rpx;
  color: #999;
}

.empty-state{
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon{
  font-size: 88rpx;
  display: block;
  margin-bottom: 18rpx;
}

.empty-text{
  font-size: 30rpx;
  color: #111;
  margin-bottom: 10rpx;
}

.empty-desc{
  font-size: 26rpx;
  color: #8a8a8e;
}

.bottom-actions{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f5f5f5;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.action-btn{
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary{
  background: #09ccb5;
  color: #fff;
}

.action-btn::after{
  border: none;
}

.btn-text{
  font-size: 32rpx;
}

