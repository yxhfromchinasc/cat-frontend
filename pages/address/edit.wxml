<view class="page">
  <view class="form-card">
    <view class="form-item">
      <text class="label">联系人</text>
      <input class="input" placeholder="联系人姓名" value="{{name}}" bindinput="onNameInput" />
    </view>

    <view class="form-item">
      <text class="label">手机号</text>
      <input class="input" placeholder="联系人手机号" value="{{phone}}" bindinput="onPhoneInput" type="number" maxlength="11" />
    </view>

    <view class="form-item">
      <text class="label">详细地址</text>
      <view class="picker-row" bindtap="onChooseLocation">
        <text class="picker-text">{{ locationName || '选择地址' }}</text>
        <image class="location-icon" src="{{locationIcon}}" mode="aspectFit"></image>
      </view>
    </view>

    <view class="form-item">
      <text class="label">楼号-门牌号</text>
      <input class="input" placeholder="楼号/门牌号" value="{{detail}}" bindinput="onDetailInput" />
    </view>

    <view class="form-item checkbox-item">
      <text class="label">设为默认</text>
      <switch checked="{{isDefault}}" bindchange="onDefaultChange" color="#09ccb5" />
    </view>
  </view>

  <view class="bottom-bar">
    <button wx:if="{{isEdit}}" class="delete-btn" bindtap="deleteAddress">
      <text class="btn-text">删除地址</text>
    </button>
    <button class="submit-btn" bindtap="saveAddress">
      <text class="btn-text">提交</text>
    </button>
  </view>
</view>
