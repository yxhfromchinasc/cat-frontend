.page{
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
  padding-bottom: 140rpx;
}

.form-card{
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 24rpx;
}

.form-item{
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  min-height: 48rpx;
}

.form-item.checkbox-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.label{
  font-size: 28rpx;
  color: #111;
  font-weight: 400;
  flex-shrink: 0;
  margin-right: 32rpx;
  width: 160rpx;
  text-align: left;
  line-height: 1.5;
}

.input{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
  text-align: left;
  min-width: 0;
  line-height: 1.5;
  padding: 0;
}

.picker-row{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 0;
}

.picker-text{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: left;
  min-width: 0;
  line-height: 1.5;
  margin-right: 16rpx;
}

.location-icon{
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.bottom-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f5f5f5;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 20rpx;
}

.delete-btn{
  flex: 1;
  height: 88rpx;
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
}

.delete-btn::after{
  border: none;
}

.submit-btn{
  flex: 1;
  height: 88rpx;
  background: #09ccb5;
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  border: none;
}

.submit-btn::after{
  border: none;
}

.btn-text{
  font-size: 32rpx;
}
