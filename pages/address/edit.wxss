.page{min-height:100vh;background:#f7f8fa;padding-bottom:120rpx}

.form{padding:16rpx}

.form-item{background:#fff;border-radius:12rpx;margin-bottom:12rpx;padding:24rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,0.05)}
.form-item.checkbox-item{display:flex;align-items:center;justify-content:space-between}

.label{font-size:28rpx;color:#111;font-weight:600;margin-bottom:12rpx;display:block}
.label.required::after{content:'*';color:#ff4444;margin-left:4rpx}
.checkbox-item .label{margin-bottom:0}

.input{width:100%;font-size:28rpx;color:#333;border:none;outline:none}
.textarea{width:100%;font-size:28rpx;color:#333;border:none;outline:none;min-height:120rpx;resize:none}

.picker-row{display:flex;align-items:center;justify-content:space-between}
.picker-text{font-size:28rpx;color:#333}
.arrow{font-size:36rpx;color:#8a8a8e}

.bottom-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 20rpx;
}

.delete-btn{
  flex: 0 0 auto;
  width: 200rpx;
  height: 88rpx;
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.delete-btn::after{
  border: none;
}

.save-btn{
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.save-btn::after{
  border: none;
}

.btn-text{
  font-size: 32rpx;
}
