.coupon-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
  background: #f7f8fa;
}

/* 顶部标签栏 */
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8a8a8e;
  position: relative;
}

.tab-item.active {
  color: #09ccb5;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #09ccb5;
  border-radius: 2rpx;
}

/* 标签内容区域 */
.tab-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 状态筛选 */
.status-filter {
  display: flex;
  background: #fff;
  padding: 24rpx;
  gap: 24rpx;
  margin-bottom: 24rpx;
  flex-shrink: 0;
}

.filter-item {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #8a8a8e;
}

.filter-item.active {
  background: #09ccb5;
  color: #fff;
}

/* 卡券列表 */
.coupon-list {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding: 24rpx;
  padding-bottom: 24rpx;
}

.coupon-item {
  margin-bottom: 16rpx;
}

/* 卡券卡片 - 简洁设计 */
.coupon-card {
  background: #fff0f0;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
  width: 100%;
}

.coupon-card.type-fixed {
  background: #fff0f0;
}

.coupon-card.type-discount {
  background: #f0f9f4;
}

.coupon-card.type-fullreduce {
  background: #f0f4ff;
}

.coupon-card.used {
  background: #f5f5f5;
}

.coupon-card.expired {
  background: #f5f5f5;
}

.coupon-card.sold-out {
  background: #f5f5f5;
}

.coupon-card.max-reached {
  background: #f5f5f5;
}

/* 卡券头部行 */
.coupon-header-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.coupon-type-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #09ccb5;
  color: #fff;
  font-size: 20rpx;
  border-radius: 6rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.coupon-card.type-fixed .coupon-type-tag {
  background: #ff4757;
}

.coupon-card.type-discount .coupon-type-tag {
  background: #09ccb5;
}

.coupon-card.type-fullreduce .coupon-type-tag {
  background: #1890ff;
}

.coupon-card.used .coupon-type-tag,
.coupon-card.expired .coupon-type-tag,
.coupon-card.sold-out .coupon-type-tag,
.coupon-card.max-reached .coupon-type-tag {
  background: #999;
  opacity: 0.7;
}

.coupon-status-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f0f2f5;
  color: #646566;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
  margin-left: auto;
}

/* 卡券主体 */
.coupon-body {
  display: flex;
  flex-direction: column;
}

.coupon-main {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 金额区域 */
.coupon-value-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  max-width: 160rpx;
  flex-shrink: 0;
}

.value-wrapper {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 4rpx;
  text-align: center;
}

.value-symbol {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4757;
  line-height: 1;
}

.value-amount {
  font-size: 64rpx;
  font-weight: 700;
  color: #ff4757;
  line-height: 1;
}

.coupon-card.type-fixed .value-symbol,
.coupon-card.type-fixed .value-amount {
  color: #ff4757;
}

.coupon-card.type-discount .value-symbol,
.coupon-card.type-discount .value-amount {
  color: #09ccb5;
}

.coupon-card.type-fullreduce .value-symbol,
.coupon-card.type-fullreduce .value-amount {
  color: #1890ff;
}

.coupon-card.used .value-symbol,
.coupon-card.used .value-amount,
.coupon-card.expired .value-symbol,
.coupon-card.expired .value-amount,
.coupon-card.sold-out .value-symbol,
.coupon-card.sold-out .value-amount,
.coupon-card.max-reached .value-symbol,
.coupon-card.max-reached .value-amount {
  color: #646566;
}

/* 信息区域 */
.coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
  overflow: hidden;
}

.coupon-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  line-height: 1.4;
  flex: 1;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* 元信息行（条件、有效期等） */
.coupon-meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #646566;
  flex-wrap: wrap;
  word-break: break-word;
  overflow-wrap: break-word;
}

.coupon-meta-row text {
  white-space: nowrap;
}

.coupon-condition {
  color: #646566;
}

.extra-text {
  color: #09ccb5;
  font-weight: 500;
}

.coupon-time {
  color: #8a8a8e;
  font-size: 22rpx;
}

.coupon-desc {
  font-size: 24rpx;
  color: #8a8a8e;
  line-height: 1.4;
}

/* 操作按钮 */
.coupon-action {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.receive-btn {
  background: #09ccb5;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  min-width: 140rpx;
}

.receive-btn[disabled] {
  background: #e5e5e5;
  color: #999;
}

.receive-btn::after {
  border: none;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 96rpx;
  display: block;
  margin-bottom: 24rpx;
  color: #d1d5db;
}

.empty-text {
  font-size: 32rpx;
  color: #111;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 28rpx;
  color: #8a8a8e;
}
