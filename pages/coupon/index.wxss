.coupon-page {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 顶部标签栏 */
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8a8a8e;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* 状态筛选 */
.status-filter {
  display: flex;
  background: #fff;
  padding: 24rpx;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.filter-item {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #8a8a8e;
}

.filter-item.active {
  background: #667eea;
  color: #fff;
}

/* 卡券列表 */
.coupon-list {
  padding: 0 24rpx;
}

.coupon-item {
  margin-bottom: 24rpx;
}

.coupon-card {
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

/* 撕裂孔 */
.perforation {
  position: absolute;
  top: 50%;
  width: 28rpx;
  height: 28rpx;
  background: #f7f8fa;
  border-radius: 50%;
  transform: translateY(-50%);
  z-index: 2;
}
.perforation-left { left: -14rpx; }
.perforation-right { right: -14rpx; }

/* 垂直虚线分割 */
.divider {
  width: 0;
  flex: 0 0 0;
  border-left: 2rpx dashed #e5e5e5;
  margin: 24rpx 0;
}

.coupon-card.used {
  opacity: 0.6;
}

.coupon-card.expired {
  opacity: 0.5;
  background: #f5f5f5;
}

.coupon-card.available {
  border: 2rpx solid #667eea;
}

.coupon-card.expired {
  opacity: 0.5;
  background: #f5f5f5;
}

.coupon-card.expired .coupon-left {
  background: #999;
}

.coupon-card.sold-out {
  opacity: 0.6;
  background: #f8f8f8;
}

.coupon-card.sold-out .coupon-left {
  background: #ccc;
}

.coupon-card.max-reached {
  opacity: 0.7;
  background: #f0f0f0;
}

.coupon-card.max-reached .coupon-left {
  background: #bbb;
}

/* 卡券左侧 */
.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
}

/* 类型配色 */
.coupon-card.type-fixed .coupon-left {
  background: linear-gradient(135deg, #4f46e5 0%, #6d28d9 100%);
}
.coupon-card.type-discount .coupon-left {
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
}
.coupon-card.type-fullreduce .coupon-left {
  background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
}

.coupon-card.used .coupon-left {
  background: #ccc;
}

.coupon-card.expired .coupon-left {
  background: #999;
}

.coupon-value {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.value-symbol {
  font-size: 24rpx;
  font-weight: 600;
}

.value-amount {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
}

.coupon-condition {
  font-size: 20rpx;
  opacity: 0.9;
}

.coupon-extra {
  margin-top: 6rpx;
  font-size: 20rpx;
  background: rgba(255,255,255,0.18);
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

/* 卡券右侧 */
.coupon-right {
  flex: 1;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 类型角标 */
.coupon-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: rgba(0,0,0,0.2);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  z-index: 3;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 8rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #8a8a8e;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.coupon-time {
  font-size: 24rpx;
  color: #8a8a8e;
  margin-bottom: 16rpx;
}

.coupon-status {
  display: flex;
  justify-content: flex-end;
}

.status-unused {
  font-size: 24rpx;
  color: #667eea;
  background: #eef0ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.status-used {
  font-size: 24rpx;
  color: #8a8a8e;
  background: #f0f2f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.status-expired {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.coupon-action {
  display: flex;
  justify-content: flex-end;
}

.receive-btn {
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.receive-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 96rpx;
  display: block;
  margin-bottom: 24rpx;
  color: #d1d5db;
}

.empty-text {
  font-size: 32rpx;
  color: #111;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 28rpx;
  color: #8a8a8e;
}
