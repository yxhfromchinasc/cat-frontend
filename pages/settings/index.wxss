.page{
  min-height: 100vh;
  background: #f5f5f5;
}

/* 功能列表 */
.menu-list{
  background: #fff;
  margin-top: 0;
}

.menu-item{
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 48rpx;
  position: relative;
}

.menu-item:last-child{
  border-bottom: none;
}

.menu-icon{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.menu-label{
  flex: 1;
  font-size: 28rpx;
  color: #555555;
  font-weight: 400;
  line-height: 1.5;
}

.menu-value{
  font-size: 28rpx;
  color: #555555;
  margin-right: 16rpx;
  line-height: 1.5;
}

.menu-arrow{
  font-size: 32rpx;
  color: #999;
  flex-shrink: 0;
  line-height: 1;
}

/* 退出登录 */
.logout-section{
  margin-top: 24rpx;
  padding: 0 24rpx;
}

.logout-btn{
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
}

.logout-btn::after{
  border: none;
}

.btn-text{
  font-size: 32rpx;
}

/* 公告弹窗 */
.announcement-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.announcement-popup {
  background: #ffffff;
  border-radius: 20rpx;
  margin: 40rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.announcement-title {
  padding: 30rpx 30rpx 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
}

.announcement-image {
  width: calc(100% - 30rpx);
  display: block;
  margin: 0 auto;
  border-radius: 8rpx;
}

.announcement-image-with-title {
  margin-top: 0;
}

.announcement-image-without-title {
  margin-top: 15rpx;
}

.announcement-text {
  padding: 30rpx;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.6;
  overflow-y: auto;
  flex: 1;
}

.announcement-footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 30rpx;
}

.announcement-footer-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.announcement-footer-left:empty {
  display: none;
}

.announcement-checkbox-wrapper {
  display: flex;
  align-items: center;
  height: 32rpx;
}

.announcement-checkbox {
  width: 32rpx !important;
  height: 32rpx !important;
  margin-right: 12rpx;
  margin-top: -10px !important;
  margin-bottom: 0 !important;
  margin-left: 0 !important;
  padding: 0 !important;
  flex-shrink: 0;
  display: block;
}

.announcement-checkbox-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 32rpx;
  height: 32rpx;
  user-select: none;
  display: flex;
  align-items: center;
  margin-left: 8px;
}

.announcement-close-btn {
  height: 70rpx;
  min-width: 140rpx;
  line-height: 70rpx;
  text-align: center;
  background: #09ccb5;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 0 30rpx;
  margin: 0 auto;
  box-shadow: 0 2rpx 8rpx rgba(9, 204, 181, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.announcement-close-btn-loading {
  opacity: 0.7;
  pointer-events: none;
}

.announcement-close-btn-loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: announcement-loading-spin 0.8s linear infinite;
  margin-right: 12rpx;
}

@keyframes announcement-loading-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
