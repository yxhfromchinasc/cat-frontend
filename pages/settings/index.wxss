.page{
  min-height: 100vh;
  background: #f5f5f5;
}

/* 功能列表 */
.menu-list{
  background: #fff;
  margin-top: 0;
}

.menu-item{
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 48rpx;
  position: relative;
}

.menu-item:last-child{
  border-bottom: none;
}

.menu-icon{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.menu-label{
  flex: 1;
  font-size: 28rpx;
  color: #555555;
  font-weight: 400;
  line-height: 1.5;
}

.menu-value{
  font-size: 28rpx;
  color: #555555;
  margin-right: 16rpx;
  line-height: 1.5;
}

.menu-arrow{
  font-size: 32rpx;
  color: #999;
  flex-shrink: 0;
  line-height: 1;
}

/* 退出登录 */
.logout-section{
  margin-top: 24rpx;
  padding: 0 24rpx;
}

.logout-btn{
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
}

.logout-btn::after{
  border: none;
}

.btn-text{
  font-size: 32rpx;
}

/* 菜单按钮样式（用于消息订阅设置） */
.menu-button {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 24rpx;
  font-size: 32rpx;
  color: #999;
}

.menu-button::after {
  border: none;
}
