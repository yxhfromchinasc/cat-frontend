<view class="page">
  <!-- 关于 -->
  <view class="section">
    <view class="section-title">关于</view>
    <view class="setting-item" bindtap="goAbout">
      <view class="setting-left">
        <text class="setting-icon">ℹ️</text>
        <text class="setting-label">关于我们</text>
      </view>
      <view class="setting-right">
        <text class="setting-value">v{{appVersion}}</text>
        <text class="arrow">›</text>
      </view>
    </view>
    <view class="setting-item" bindtap="goUserAgreement">
      <view class="setting-left">
        <text class="setting-icon">📄</text>
        <text class="setting-label">用户协议</text>
      </view>
      <view class="setting-right">
        <text class="arrow">›</text>
      </view>
    </view>
    <view class="setting-item" bindtap="goPrivacyPolicy">
      <view class="setting-left">
        <text class="setting-icon">📋</text>
        <text class="setting-label">隐私政策</text>
      </view>
      <view class="setting-right">
        <text class="arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="section" wx:if="{{isLogin}}">
    <view class="logout-section">
      <button class="logout-btn" bindtap="logout">退出登录</button>
    </view>
  </view>
</view>

