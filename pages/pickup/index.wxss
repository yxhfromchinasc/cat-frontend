/* pages/pickup/index.wxss */
.pickup-page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

.scroll-area {
  height: calc(100vh - 120rpx);
}

.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

.card-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

/* 取件码文本框（两行） */
.pick-codes-textarea {
  min-height: 100rpx;
  max-height: 100rpx;
}

/* 物品备注文本框 */
.item-remark-textarea {
  min-height: 180rpx;
}

/* 快捷选项 */
.quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.quick-option-item {
  padding: 12rpx 24rpx;
  background: #f0f4ff;
  border: 1rpx solid #667eea;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #667eea;
  cursor: pointer;
  transition: all 0.3s;
}

.quick-option-item:active {
  background: #667eea;
  color: #fff;
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111;
}

.picker-field.disabled {
  opacity: 0.5;
  background: #f0f0f0;
}

.placeholder-text {
  color: #999;
}

/* 图片列表 */
.pic-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.pic-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.pic-image {
  width: 100%;
  height: 100%;
}

.pic-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
}

.pic-add {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.pic-add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.pic-add-text {
  font-size: 24rpx;
  color: #999;
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.address-item {
  padding: 24rpx;
  border: 2rpx solid #e5e6eb;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
  background: #fff;
  transition: all 0.3s;
}

.address-item.selected {
  border-color: #667eea;
  background: #f0f4ff;
}

.address-item.disabled {
  opacity: 0.5;
  background: #f7f8fa;
}

.address-content {
  flex: 1;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.contact-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #111;
}

.contact-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.address-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag.default {
  background: #fff2ed;
  color: #ff7a45;
}

.tag.out-of-range {
  background: #fff1f0;
  color: #ff4757;
}

.address-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #667eea;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #667eea;
  color: #fff;
  border-radius: 999rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn::after {
  border: none;
}

/* 时间选择器 */
.time-selector-row {
  display: flex;
  gap: 24rpx;
}

.time-selector-item {
  flex: 1;
}

.selected-time-display {
  margin-top: 24rpx;
  padding: 20rpx 24rpx;
  background: #f0f4ff;
  border-radius: 12rpx;
  text-align: center;
}

.selected-time-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}
