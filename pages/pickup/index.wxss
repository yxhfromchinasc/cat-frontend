/* pages/pickup/index.wxss */
.pickup-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

.scroll-area {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 滚动区域底部空白，避免内容被底部按钮遮挡 */
.scroll-bottom-spacer {
  height: 200rpx;
  min-height: 200rpx;
}

.card {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 地址卡片：底部无间距 */
.address-card {
  margin-bottom: 0;
  border-radius: 16rpx 16rpx 0 0;
}

/* 驿站卡片：顶部无间距，与地址卡片合并 */
.station-card {
  margin-top: 0;
  border-radius: 0 0 16rpx 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 加急卡片：底部无间距 */
.urgent-card {
  margin-bottom: 0;
  border-radius: 16rpx 16rpx 0 0;
}

/* 时间卡片：顶部无间距，与加急卡片合并 */
.time-card {
  margin-top: 0;
  border-radius: 0 0 16rpx 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
  margin-bottom: 24rpx;
}

.card-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 驿站提示复用回收样式 */
.recycling-point-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  background: #f7f8fa;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.5;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

/* 取件码文本框（两行） */
.pick-codes-textarea {
  min-height: 100rpx;
  max-height: 100rpx;
}

/* 物品备注文本框 */
.item-remark-textarea {
  min-height: 50rpx;
  max-height: 80rpx;
}

/* 快捷选项 */
.quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.quick-option-item {
  padding: 12rpx 24rpx;
  background: #f0f4ff;
  border: 1rpx solid #09ccb5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #09ccb5;
  cursor: pointer;
  transition: all 0.3s;
}

.quick-option-item-hover {
  background: #09ccb5;
  color: #fff;
}

.picker-field {
  height: 80rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #111;
}

.picker-field.disabled {
  background: #f0f0f0;
  color: #999;
}

.placeholder-text {
  color: #999;
}

.disabled-text {
  color: #999;
  text-decoration: line-through;
}

/* 图片上传 */
.image-upload-container {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-image-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn:active {
  background: #f5f5f5;
  border-color: #09ccb5;
}

.upload-placeholder-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.address-item {
  padding: 24rpx;
  border: 2rpx solid #e5e6eb;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
  background: #fff;
  transition: all 0.3s;
}

.address-item.selected {
  border-color: #09ccb5;
  background: #f0f4ff;
}

.address-item.disabled {
  opacity: 0.5;
  background: #f7f8fa;
}

/* 地址内容已在上面定义 */

.address-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag.default {
  background: #fff2ed;
  color: #ff7a45;
}

.tag.out-of-range {
  background: #fff1f0;
  color: #ff4757;
}

.address-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #09ccb5;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 单个地址显示 */
.address-single {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 0;
  border: none;
  transition: all 0.3s;
}

.address-single:active {
  background: #f5f5f5;
}

.address-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.location-icon {
  width: 80rpx;
  height: 80rpx;
}

.address-content {
  flex: 1;
  min-width: 0;
}

.address-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.contact-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.contact-phone {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.address-detail {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

.address-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 去添加地址按钮 */
.address-empty {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}

.address-empty:active {
  background: #f0f4ff;
  border-color: #09ccb5;
}

.empty-text {
  font-size: 28rpx;
  color: #09ccb5;
}

/* 底部按钮 */
.bottom-bar {
  flex-shrink: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a0 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-btn::after {
  border: none;
}

/* 表单 */
.form-item.checkbox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.checkbox-item .label {
  margin-bottom: 0;
}

.urgent-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.urgent-tip-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.disabled-text {
  color: #c0c4cc;
}

/* 快递计价卡片，与回收价格卡片风格统一 */
.price-card {
  margin-top: 16rpx;
}

.price-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.price-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #09ccb5;
  margin-right: 12rpx;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-main {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #09ccb5;
  margin-right: 8rpx;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
}

.price-desc {
  font-size: 22rpx;
  color: #999;
}

/* 预约时间选择器 */
.appointment-time-selector {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 0;
  border: none;
}

.appointment-time-selector:active {
  background: #f5f5f5;
}

.time-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.clock-icon {
  width: 80rpx;
  height: 80rpx;
}

.time-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.time-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  margin-bottom: 8rpx;
}

.time-placeholder {
  font-size: 26rpx;
  color: #999;
}

.time-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 时间选择器弹窗 */
.time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 9999;
  pointer-events: auto;
}

.time-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.time-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-picker-cancel {
  font-size: 28rpx;
  color: #666;
}

.time-picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #111;
}

.time-picker-confirm {
  font-size: 28rpx;
  color: #09ccb5;
}

.time-picker-body {
  display: flex;
  height: 800rpx;
  overflow: hidden;
}

.time-picker-left {
  width: 200rpx;
  border-right: 1rpx solid #f0f0f0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  flex-shrink: 0;
}

.time-picker-date-item {
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-picker-date-item.active {
  color: #09ccb5;
  background: #f0f9f4;
}

.time-picker-right {
  flex: 1;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  position: relative;
}

.time-picker-bottom-spacer {
  height: 300rpx;
  flex-shrink: 0;
}

.time-picker-empty {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

.time-picker-time-item {
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.time-picker-time-item.active {
  color: #09ccb5;
  background: #f0f9f4;
}

.time-picker-time-item.disabled {
  color: #ccc;
  text-decoration: line-through;
}
