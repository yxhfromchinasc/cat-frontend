.withdraw-page {
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #888;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #555;
}

.balance-value {
  display: block;
  font-size: 32rpx;
  color: #09ccb5;
  font-weight: 500;
}

.selected-amount {
  border: 2rpx solid #09ccb5;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #f0f9f4;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.selected-amount-text {
  font-size: 32rpx;
  color: #09ccb5;
  font-weight: 500;
}

.selected-amount-placeholder {
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.pay-btn {
  margin-top: 48rpx;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a0 100%);
  color: #fff;
  border: none;
}

.quick-amounts {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 24rpx 0 16rpx;
}

.amount-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  background-color: #fff;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s;
}

.amount-btn.active {
  border-color: #09ccb5;
  background-color: #09ccb5;
  color: #fff;
  font-weight: 500;
}

/* 全部提现按钮 */
.full-withdraw-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.full-withdraw-label {
  font-size: 32rpx;
  color: inherit;
}

.full-withdraw-btn.active .full-withdraw-label {
  color: #fff;
}

.limited-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  transform: scale(0.85);
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.tips {
  margin-top: 28rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1.8;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}
