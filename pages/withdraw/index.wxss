.withdraw-page {
  padding: 40rpx;
  min-height: 100vh;
  background: #f7f8fa;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #888;
}

.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #555;
  font-size: 28rpx;
}

.input {
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.withdraw-btn {
  margin-top: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.quick-amounts {
  display: flex;
  gap: 16rpx;
  margin: 12rpx 0 8rpx;
}

.balance-info {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.tips {
  margin-top: 28rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1.8;
}

