<view class="withdraw-page" wx:if="{{!loading}}">
  <view class="header">
    <text class="title">余额提现</text>
    <text class="subtitle">仅微信零钱</text>
  </view>

  <view class="form">
    <view class="form-item" wx:if="{{balance !== null}}">
      <text class="label">当前余额（元）</text>
      <text class="balance-value">¥{{balanceStr || '0.00'}}</text>
    </view>
    <view class="form-item">
      <text class="label">提现金额（元）</text>
      <input class="input" type="digit" placeholder="请输入金额，如 1.00" bindinput="onAmountInput" value="{{amount}}" />
    </view>
    <view class="quick-amounts">
      <button size="mini" bindtap="onQuickPick" data-val="10">¥10</button>
      <button size="mini" bindtap="onQuickPick" data-val="50">¥50</button>
      <button size="mini" bindtap="onQuickPick" data-val="100">¥100</button>
      <button size="mini" bindtap="onQuickPick" data-val="200">¥200</button>
    </view>
    <button class="pay-btn" type="primary" loading="{{submitting}}" disabled="{{!canSubmit || submitting}}" bindtap="onWithdraw">确认提现</button>
  </view>

  <view class="tips">
    <text>· 金额须为正数，最多两位小数</text>
    <text>· 提现后需要确认收款才会到账</text>
    <text>· 24小时内未确认收款将自动退款</text>
  </view>
</view>

<view class="loading" wx:if="{{loading}}">
  <text>加载中...</text>
</view>
