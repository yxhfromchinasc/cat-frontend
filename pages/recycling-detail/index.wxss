/* pages/recycling-detail/index.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 进度条区域 */
.progress-section {
  flex-shrink: 0;
  background: #fff;
  padding: 40rpx 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.progress-wrapper {
  position: relative;
  padding: 0 20rpx;
}

/* 进度节点容器 */
.progress-nodes {
  display: flex;
  justify-content: space-between;
  position: relative;
  align-items: flex-start;
}

.progress-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.node-container {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 16rpx;
}

.node-line {
  flex: 1;
  height: 4rpx;
  background: #e5e6eb;
}

.node-line.completed {
  background: #09ccb5;
}

.node-line.pending {
  background: #e5e6eb;
}

.node-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 3rpx solid #e5e6eb;
  position: relative;
  z-index: 2;
  flex-shrink: 0;
  margin: 0 8rpx;
}

/* 已完成的节点：绿色实心 */
.progress-node.completed .node-dot {
  background: #09ccb5;
  border-color: #09ccb5;
  width: 32rpx;
  height: 32rpx;
}

/* 当前进行中的节点：空心（只有边框） */
.progress-node.active .node-dot {
  background: #fff;
  border: 3rpx solid #09ccb5;
  width: 32rpx;
  height: 32rpx;
  box-shadow: 0 0 0 4rpx rgba(9, 204, 181, 0.1);
}

/* 未走到的节点：浅色实心 */
.progress-node.pending .node-dot {
  background: #e5e6eb;
  border-color: #e5e6eb;
  width: 32rpx;
  height: 32rpx;
}

.node-label {
  font-size: 24rpx;
  text-align: center;
  line-height: 1.4;
  color: #999;
  margin-top: 4rpx;
  width: 100%;
}

/* 已完成节点的文字：深色 */
.progress-node.completed .node-label {
  color: #111;
  font-weight: 500;
}

/* 当前进行中节点的文字：深色 */
.progress-node.active .node-label {
  color: #111;
  font-weight: 500;
}

/* 未走到节点的文字：浅色 */
.progress-node.pending .node-label {
  color: #999;
  font-weight: 400;
}

/* 回收员信息 */
.courier-section {
  flex-shrink: 0;
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

.courier-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.courier-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.courier-text {
  display: flex;
  flex-direction: column;
}

.courier-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.courier-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  margin-bottom: 6rpx;
}

.courier-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.courier-rating {
  display: flex;
  gap: 4rpx;
  transform: translateY(2rpx);
}

.courier-rating .star {
  font-size: 26rpx;
  color: #ffcc00;
}

.courier-actions {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.phone-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phone-icon {
  width: 32rpx;
  height: 32rpx;
}

.contact-btn-small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-icon-small {
  width: 36rpx;
  height: 36rpx;
}

/* 时间线滚动区域 */
.timeline-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 时间线 */
.timeline-section {
  background: #fff;
  padding: 0 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

.timeline-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.timeline-item:first-child {
  padding-top: 32rpx;
}

.timeline-item:last-child {
  border-bottom: none;
  padding-bottom: 32rpx;
}

.timeline-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  min-width: 40rpx;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 4rpx solid #e5e6eb;
  z-index: 2;
}

.timeline-dot.completed {
  background: #09ccb5;
  border-color: #09ccb5;
}

.timeline-dot.waiting {
  background: #fff;
  border-color: #09ccb5;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.timeline-dot.cancelled {
  background: #999;
  border-color: #999;
}

.timeline-item.cancelled .timeline-dot {
  background: #fa5151;
  border-color: #fa5151;
}

.timeline-item.cancelled .timeline-title {
  color: #fa5151;
}

.timeline-item.cancelled .timeline-line {
  background: #fa5151;
}

.timeline-line {
  width: 2rpx;
  flex: 1;
  background: #e5e6eb;
  margin-top: 8rpx;
}

.timeline-content {
  flex: 1;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: nowrap;
}

.urgent-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin-top: 8rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  white-space: nowrap;
}

.timeline-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  color: #555555;
  line-height: 1.5;
  min-height: 40rpx;
}

.info-label {
  color: #999;
  min-width: 140rpx;
  flex-shrink: 0;
  line-height: 1.5;
}

.info-value {
  color: #555555;
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
}

.info-value.price {
  color: #ff4757;
  font-weight: 500;
}

/* 价格组成 */
.price-breakdown {
  margin-top: 20rpx;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
}

.breakdown-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111;
  margin-bottom: 16rpx;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  font-size: 26rpx;
  line-height: 1.5;
}

.breakdown-label {
  color: #999;
}

.breakdown-value {
  color: #555555;
  font-weight: 500;
}

.breakdown-value.positive {
  color: #09ccb5;
}

.breakdown-value.negative {
  color: #ee0a24;
}

.breakdown-value.reason {
  color: #999;
  font-size: 24rpx;
  flex: 1;
  text-align: right;
  margin-left: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.info-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}

/* 操作按钮区域 */
.actions-bar {
  flex-shrink: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background: #f7f8fa;
  color: #666;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}


