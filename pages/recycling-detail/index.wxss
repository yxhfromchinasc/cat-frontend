/* pages/recycling-detail/index.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 进度条区域 */
.progress-section {
  flex-shrink: 0;
  background: #fff;
  padding: 48rpx 24rpx 40rpx;
  margin-bottom: 24rpx;
}

.progress-bar {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  padding: 0 20rpx;
  height: 40rpx;
}

.progress-item {
  flex: 1;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.progress-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 4rpx solid #e5e6eb;
  position: relative;
  z-index: 3;
  flex-shrink: 0;
}

.progress-item.completed .progress-dot {
  background: #07c160;
  border-color: #07c160;
}

.progress-item.waiting .progress-dot {
  background: #fff;
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.progress-item.disabled .progress-dot {
  background: #e5e6eb;
  border-color: #e5e6eb;
}

.progress-line {
  flex: 1;
  height: 4rpx;
  background: #e5e6eb;
  margin-left: -12rpx;
  margin-right: -12rpx;
  position: relative;
  z-index: 2;
  min-width: 0;
}

.progress-line.completed {
  background: #07c160;
}

.progress-line.disabled {
  background: #e5e6eb;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.progress-label {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.progress-label.completed {
  color: #07c160;
  font-weight: 600;
}

.progress-label.waiting {
  color: #07c160;
}

/* 回收员信息 */
.courier-section {
  flex-shrink: 0;
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.courier-info {
  display: flex;
  align-items: center;
}

.courier-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.courier-text {
  display: flex;
  flex-direction: column;
}

.courier-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.courier-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 8rpx;
}

.courier-desc {
  font-size: 24rpx;
  color: #999;
}

.courier-rating {
  display: flex;
  gap: 4rpx;
  transform: translateY(2rpx);
}

.courier-rating .star {
  font-size: 26rpx;
  color: #ffcc00;
}

/* 时间线滚动区域 */
.timeline-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 时间线 */
.timeline-section {
  background: #fff;
  padding: 0 24rpx;
}

.timeline-item {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.timeline-item:last-child {
  border-bottom: none;
}

.timeline-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  min-width: 40rpx;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 4rpx solid #e5e6eb;
  z-index: 2;
}

.timeline-dot.completed {
  background: #07c160;
  border-color: #07c160;
}

.timeline-dot.waiting {
  background: #fff;
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.timeline-dot.cancelled {
  background: #999;
  border-color: #999;
}

.timeline-item.cancelled .timeline-dot {
  background: #fa5151;
  border-color: #fa5151;
}

.timeline-item.cancelled .timeline-title {
  color: #fa5151;
}

.timeline-item.cancelled .timeline-line {
  background: #fa5151;
}

.timeline-line {
  width: 2rpx;
  flex: 1;
  background: #e5e6eb;
  margin-top: 8rpx;
}

.timeline-content {
  flex: 1;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
  flex-shrink: 0;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.timeline-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.info-label {
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  color: #333;
}

.info-value.price {
  color: #ff4757;
  font-weight: 600;
}

/* 价格组成 */
.price-breakdown {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
}

.breakdown-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 26rpx;
}

.breakdown-label {
  color: #666;
}

.breakdown-value {
  color: #333;
  font-weight: 500;
}

.breakdown-value.positive {
  color: #07c160;
}

.breakdown-value.negative {
  color: #ee0a24;
}

.breakdown-value.reason {
  color: #999;
  font-size: 24rpx;
  flex: 1;
  text-align: right;
  margin-left: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 8rpx;
}

.info-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* 操作按钮区域 */
.actions-bar {
  flex-shrink: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background: #f7f8fa;
  color: #666;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

