.page {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 图片容器 */
.image-container {
  width: 100%;
  height: 100vh;
  background: #ffffff;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.content-image {
  width: 100%;
  display: block;
}

/* 空白状态 */
.empty-state {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  background: #f7f8fa;
}

.empty-illustration {
  width: 360rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #111;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #8a8a8e;
}

