.page{min-height:100vh;background:#f7f8fa}
.card{background:#fff;border-radius:16rpx;margin:16rpx;padding:24rpx}
.shadow{box-shadow:0 12rpx 24rpx rgba(0,0,0,0.05)}

/* 头部卡片 */
.header-card{display:flex;align-items:center;position:relative}
.avatar{width:112rpx;height:112rpx;border-radius:56rpx;background:#eee;position:relative}
.header-meta{margin-left:20rpx;display:flex;flex-direction:column}
.name{font-size:34rpx;font-weight:700;color:#111}
.phone{margin-top:6rpx;font-size:26rpx}
.login-hint{position:absolute;right:24rpx;top:50%;transform:translateY(-50%)}
.login-text{font-size:24rpx;color:#667eea;background:#eef0ff;border-radius:8rpx;padding:8rpx 16rpx}


/* 快捷统计 */
.quick-grid{display:flex;justify-content:space-between}
.qcell{flex:1;text-align:center}
.qnum{font-size:34rpx;font-weight:700;color:#111}
.qlabel{display:block;margin-top:6rpx;font-size:24rpx;color:#8a8a8e}

/* 工具区 */
.section-title{font-size:28rpx;color:#111;margin-bottom:8rpx}
.tool-grid{display:grid;grid-template-columns:repeat(4,1fr);grid-gap:18rpx;margin-top:10rpx}
.tool{background:#fff;border-radius:12rpx;padding:22rpx 0;display:flex;flex-direction:column;align-items:center;border:1px solid #f0f0f0}
.icon{font-size:40rpx}
.tlabel{margin-top:8rpx;font-size:24rpx;color:#111}

.muted{color:#8a8a8e}
