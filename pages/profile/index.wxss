.page{
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部青色背景区域 */
.header-section{
  background: #09ccb5;
  padding: 60rpx 24rpx 40rpx 24rpx;
  display: flex;
  align-items: center;
}

.avatar{
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: #eee;
  flex-shrink: 0;
}

.avatar:active{
  opacity: 0.8;
}

.user-info{
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.nickname{
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.phone{
  font-size: 28rpx;
  color: #fff;
  line-height: 1.5;
  opacity: 0.9;
}

/* 功能列表 */
.menu-list{
  background: #fff;
  margin-top: 0;
}

.menu-item{
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 48rpx;
}

.menu-item:last-child{
  border-bottom: none;
}

.menu-icon{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.menu-label{
  flex: 1;
  font-size: 28rpx;
  color: #555555;
  font-weight: 400;
  line-height: 1.5;
}

.menu-value{
  font-size: 28rpx;
  color: #555555;
  margin-right: 16rpx;
  line-height: 1.5;
}

.menu-arrow{
  font-size: 32rpx;
  color: #999;
  flex-shrink: 0;
  line-height: 1;
}
