.page{
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

.card{
  background: #fff;
  border-radius: 0;
  margin: 0;
  padding: 0;
}

.shadow{
  box-shadow: none;
}

/* 头部卡片 */
.header-card{
  display: flex;
  align-items: center;
  position: relative;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar{
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: #eee;
  position: relative;
  flex-shrink: 0;
}

.avatar:active{
  opacity: 0.8;
}

.header-meta{
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.phone{
  font-size: 32rpx;
  font-weight: 500;
  color: #111;
  line-height: 1.5;
}

.hint{
  margin-top: 8rpx;
  font-size: 26rpx;
}

.login-hint{
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.login-text{
  font-size: 28rpx;
  color: #07c160;
  background: transparent;
  border: 1rpx solid #07c160;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
}

/* 快捷统计 */
.quick-grid{
  display: flex;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.qcell{
  flex: 1;
  text-align: center;
}

.qnum{
  font-size: 32rpx;
  font-weight: 500;
  color: #111;
  line-height: 1.5;
}

.qlabel{
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666;
}

/* 工具区 */
.tools-card{
  padding: 0;
}

.section-title{
  font-size: 28rpx;
  color: #111;
  font-weight: 500;
  padding: 32rpx 24rpx 24rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tool-grid{
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 0;
  padding: 24rpx;
}

.tool{
  background: transparent;
  border-radius: 0;
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: none;
}

.icon{
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tlabel{
  font-size: 24rpx;
  color: #111;
  line-height: 1.5;
}

.muted{
  color: #8a8a8e;
}
