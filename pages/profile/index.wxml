<view class="page">
  <!-- 顶部青色背景区域 -->
  <view class="header-section" bindtap="{{isLogin ? 'goEditProfile' : 'goLogin'}}">
    <image class="avatar" src="{{avatarSrc}}" mode="aspectFill"></image>
    <view class="user-info">
      <text class="nickname">{{ isLogin ? (userInfo.nickname || '未设置昵称') : '未登录' }}</text>
      <text class="phone" wx:if="{{isLogin && userInfo.phone}}">{{userInfo.phone}}</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-list">
    <!-- 我的钱包 -->
    <view class="menu-item" bindtap="goWallet">
      <image class="menu-icon" src="/assets/tabbar/钱包.png" mode="aspectFit"></image>
      <text class="menu-label">我的钱包</text>
      <text class="menu-value" wx:if="{{isLogin}}">{{balanceStr}}</text>
      <text class="menu-arrow">›</text>
    </view>

    <!-- 卡券中心 -->
    <view class="menu-item" bindtap="goCouponCenter">
      <image class="menu-icon" src="/assets/tabbar/优惠券.png" mode="aspectFit"></image>
      <text class="menu-label">卡券中心</text>
      <text class="menu-arrow">›</text>
    </view>

    <!-- 地址 -->
    <view class="menu-item" bindtap="goAddress">
      <image class="menu-icon" src="{{addressIcon}}" mode="aspectFit"></image>
      <text class="menu-label">我的地址</text>
      <text class="menu-arrow">›</text>
    </view>

    <!-- 意见反馈 -->
    <view class="menu-item" bindtap="goFeedback">
      <image class="menu-icon" src="/assets/tabbar/意见反馈.png" mode="aspectFit"></image>
      <text class="menu-label">意见反馈</text>
      <text class="menu-arrow">›</text>
    </view>

    <!-- 联系客服 -->
    <view class="menu-item" bindtap="goService">
      <image class="menu-icon" src="/assets/tabbar/客服.png" mode="aspectFit"></image>
      <text class="menu-label">联系客服</text>
      <text class="menu-arrow">›</text>
    </view>

    <!-- 邀请好友 -->
    <view class="menu-item" bindtap="goInvite">
      <image class="menu-icon" src="/assets/tabbar/邀请好友.png" mode="aspectFit"></image>
      <text class="menu-label">邀请好友</text>
      <text class="menu-arrow">›</text>
    </view>

    <!-- 系统设置 -->
    <view class="menu-item" bindtap="goSettings">
      <image class="menu-icon" src="/assets/tabbar/系统设置.png" mode="aspectFit"></image>
      <text class="menu-label">系统设置</text>
      <text class="menu-arrow">›</text>
    </view>
  </view>
</view>
