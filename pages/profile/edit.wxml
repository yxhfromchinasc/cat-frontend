<view class="page">
  <view class="form-card">
    <!-- 头像 -->
    <view class="form-item" bindtap="uploadAvatar">
      <text class="label">头像</text>
      <view class="avatar-wrapper">
        <image class="avatar" src="{{avatarSrc}}" mode="aspectFill"></image>
      </view>
    </view>

    <!-- 昵称 -->
    <view class="form-item">
      <text class="label">昵称</text>
      <input class="input" placeholder="未设置" value="{{nickname}}" bindinput="onNicknameInput" />
      <text class="menu-arrow">›</text>
    </view>

    <!-- 手机号 -->
    <view class="form-item">
      <text class="label">手机号</text>
      <text class="phone-text">{{maskedPhone || '未绑定'}}</text>
    </view>
  </view>
</view>

