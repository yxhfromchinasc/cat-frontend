/**index.wxss**/
page {
  height: 100vh;
  /* 更平滑的渐变，增加更多色阶，让过渡更自然 */
  background: linear-gradient(to bottom, 
    #09ccb5 0%, 
    #09ccb5 8%, 
    #0fc4b0 15%, 
    #2acfb9 25%, 
    #3dd0b8 35%, 
    rgba(61, 208, 184, 0.85) 45%, 
    rgba(61, 208, 184, 0.65) 55%, 
    rgba(61, 208, 184, 0.45) 65%, 
    rgba(61, 208, 184, 0.28) 75%, 
    rgba(61, 208, 184, 0.15) 83%, 
    rgba(61, 208, 184, 0.08) 90%, 
    rgba(245, 245, 245, 0.3) 95%, 
    #f5f5f5 100%);
}

.scrollarea {
  height: 100vh;
  background: transparent;
}

.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.header-section {
  background: transparent;
  width: 100%;
  padding: 60rpx 24rpx 0rpx 50rpx;
  margin: 0;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.logo-container {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  margin-bottom: 0;
}

.app-logo {
  width: 100%;
  height: 100%;
  border-radius: 0;
  background: transparent;
}

.app-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: white;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: white;
}

.login-status {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #2c3e50;
  opacity: 1;
}

.login-status text {
  text-decoration: underline;
}

.user-info-header {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: white;
  opacity: 0.95;
}

.service-phone {
  font-size: 24rpx;
  color: #2c3e50;
  opacity: 1;
  margin-bottom: 0;
}

.biz-section {
  padding: 0;
  margin: 0;
  margin-top: 80rpx; /* 与上方图标区域保持一定距离 */
  width: 100%;
}

/* 竖版卡片区域 */
.vertical-card-section {
  padding: 0 50rpx;
  margin: 20rpx 0 0 0;
  width: 100%;
  box-sizing: border-box;
}

.vertical-card-row {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  width: 100%;
}

/* 查看附近服务点链接 */
.service-point-link {
  padding: 20rpx 50rpx;
  text-align: center;
  margin-top: 10rpx;
}

.service-point-link text {
  font-size: 26rpx;
  color: #000000;
  text-decoration: none;
}

.vertical-card {
  flex: 1;
  background: #ffffff;
  border-radius: 35rpx;
  height: 390rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.vertical-card-content {
  position: relative;
  padding: 30rpx;
  height: 100%;
  box-sizing: border-box;
}

.vertical-card-image {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.vertical-card-title-wrapper {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.vertical-card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 18rpx;
  line-height: 1.2;
  text-align: left;
}

.vertical-card-subtitle {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.2;
  text-align: left;
  margin-bottom: 14rpx;
}

.vertical-card-arrow {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.2;
  text-align: left;
}

.vertical-card-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.biz-grid {
  display: flex;
  flex-direction: column;
  gap: 22rpx;
  position: relative;
  width: 100%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.biz-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 50rpx;
  width: 100%;
}

.biz-card {
  background: #ffffff;
  border-radius: 35rpx;
  display: flex;
  flex-direction: column;
  padding: 22rpx;
  height: 160rpx;
  color: #333333;
  /* 白色卡片的阴影 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  /* 添加点击效果 */
  transition: all 0.3s ease;
}

.biz-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.biz-card-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  width: 100%;
}

.biz-card-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  flex: 1;
  height: 100%;
  padding-top: 8rpx;
}

.biz-card-right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.biz-card-image {
  width: 100%;
  height: 100%;
}

/* 上门回收 - 上面靠左，卡片大小为原来的2/3 */
.biz-card-recycle {
  width: calc((100% - 140rpx) * 0.667);
  margin-left: 50rpx;
}

/* 快递代取 - 下面靠右，卡片大小为原来的2/3 */
.biz-card-pickup {
  width: calc((100% - 140rpx) * 0.667);
  margin-right: 50rpx;
  margin-left: auto;
}

/* 小卡片 - 正方形，高度与主卡片一致 */
.small-card {
  aspect-ratio: 1 / 1;
  background: #ffffff;
  border-radius: 35rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding: 22rpx;
  color: #333333;
  /* 白色卡片的阴影 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.small-card-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 18rpx;
  flex-shrink: 0;
}

/* 提现教程 - 上门回收右边，正方形，宽度等于主卡片高度 */
.small-card-withdraw {
  width: calc(((100% - 140rpx) * 0.667) / 2.6);
  margin-right: 50rpx;
  margin-left: auto;
}

/* 服务介绍 - 快递代取左边，正方形，宽度等于主卡片高度 */
.small-card-service {
  width: calc(((100% - 140rpx) * 0.667) / 2.6);
  margin-left: 50rpx;
}

.small-card-title {
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.4;
  color: #333333;
  margin-top: 0;
}

.biz-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  /* 白色卡片使用轻微的高光效果 */
  background: radial-gradient(circle, rgba(9, 204, 181, 0.05) 0%, transparent 70%);
  pointer-events: none;
}

.small-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  /* 白色卡片使用轻微的高光效果 */
  background: radial-gradient(circle, rgba(9, 204, 181, 0.05) 0%, transparent 70%);
  pointer-events: none;
}

.biz-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #2c3e50;
  line-height: 1.2;
  letter-spacing: 0.5rpx;
}

/* 上门回收卡片专用标题样式 */
.biz-card-recycle .biz-title {
  font-size: 38rpx;
  margin-bottom: 28rpx;
}

/* 代取快递卡片专用标题样式 */
.biz-card-pickup .biz-title {
  font-size: 38rpx;
  margin-bottom: 28rpx;
}

.biz-desc {
  font-size: 25rpx;
  color: #666666;
  opacity: 1;
}

/* 上门回收按钮 */
.biz-recycle-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #41d1b8;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  padding: 14rpx 32rpx;
  border-radius: 20rpx;
  width: fit-content;
  margin-left: 0;
  box-shadow: 0 2rpx 10rpx rgba(65, 209, 184, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
  line-height: 1;
}

/* 代取快递按钮 */
.biz-pickup-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #51d1bc;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  padding: 14rpx 32rpx;
  border-radius: 20rpx;
  width: fit-content;
  margin-left: 0;
  box-shadow: 0 2rpx 10rpx rgba(81, 209, 188, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
  line-height: 1;
}

/* 用户信息区域 */
.userinfo {
  margin-bottom: 40rpx;
}

/* 用户卡片 */
.user-card, .welcome-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar, .welcome-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info, .welcome-info {
  flex: 1;
}

.user-name, .welcome-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-phone, .user-email, .welcome-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.card-footer {
  text-align: right;
}

.logout-btn, .login-btn {
  background: #ff4757;
  color: #ffffff;
  border: none;
  border-radius: 6rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.login-btn {
  background: #007aff;
}

/* 功能区域 */
.function-group {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 新增：常用功能网格 */
.feature-group {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 24rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
}

.feature-item-hover {
  background: #f8f9fa;
}

.feature-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #333333;
}

.group-title {
  padding: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item-hover {
  background-color: #f8f9fa;
}

.function-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.function-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.function-arrow {
  font-size: 24rpx;
  color: #999999;
}

/* 登录弹窗 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.login-popup {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin: 40rpx;
  width: calc(100% - 80rpx);
  max-width: 500rpx;
}

.login-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  font-size: 40rpx;
  color: #999999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.wechat-login-btn, .phone-login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn {
  background: #09ccb5;
  color: #ffffff;
}

.phone-login-btn {
  background: #f0f0f0;
  color: #333333;
}

.wechat-login-btn-hover {
  background: #05a050;
}

.phone-login-btn-hover {
  background: #e0e0e0;
}