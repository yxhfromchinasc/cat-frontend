/**index.wxss**/
page {
  height: 100vh;
  background: #f5f5f5;
}

.scrollarea {
  height: 100vh;
}

.container {
  padding: 40rpx 0;
}

.biz-section {
  margin-bottom: 32rpx;
  padding: 0 50rpx;
}

.biz-grid {
  display: flex;
  gap: 60rpx;
}

.biz-card {
  flex: 1;
  aspect-ratio: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 24rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.biz-card:first-child {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.biz-card:last-child {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 8rpx 32rpx rgba(240, 147, 251, 0.3);
}

.biz-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
}

.biz-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2);
}

.biz-desc {
  font-size: 26rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.2);
}

/* 用户信息区域 */
.userinfo {
  margin-bottom: 40rpx;
}

/* 用户卡片 */
.user-card, .welcome-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar, .welcome-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info, .welcome-info {
  flex: 1;
}

.user-name, .welcome-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-phone, .user-email, .welcome-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 4rpx;
}

.card-footer {
  text-align: right;
}

.logout-btn, .login-btn {
  background: #ff4757;
  color: #ffffff;
  border: none;
  border-radius: 6rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.login-btn {
  background: #007aff;
}

/* 功能区域 */
.function-group {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 新增：常用功能网格 */
.feature-group {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 24rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
}

.feature-item:active {
  background: #f8f9fa;
}

.feature-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #333333;
}

.group-title {
  padding: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item:active {
  background-color: #f8f9fa;
}

.function-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.function-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.function-arrow {
  font-size: 24rpx;
  color: #999999;
}

/* 登录弹窗 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.login-popup {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin: 40rpx;
  width: calc(100% - 80rpx);
  max-width: 500rpx;
}

.login-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  font-size: 40rpx;
  color: #999999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.wechat-login-btn, .phone-login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn {
  background: #07c160;
  color: #ffffff;
}

.phone-login-btn {
  background: #f0f0f0;
  color: #333333;
}

.wechat-login-btn:active {
  background: #05a050;
}

.phone-login-btn:active {
  background: #e0e0e0;
}