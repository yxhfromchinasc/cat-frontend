<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 顶部：业务入口双卡片 -->
    <view class="biz-section">
      <view class="biz-grid">
        <view class="biz-card" bindtap="goToPickup">
          <view class="biz-title">取快递</view>
          <view class="biz-desc">及时取件 省心更高效</view>
        </view>
        <view class="biz-card" bindtap="goToRecycle">
          <view class="biz-title">上门回收</view>
          <view class="biz-desc">预约上门 分类更省力</view>
        </view>
      </view>
    </view>

    
  </view>
</scroll-view>

<!-- 登录弹窗 -->
<view class="login-modal" wx:if="{{showLoginModal}}" bindtap="closeLoginModal">
  <view class="login-popup" catchtap="">
    <view class="login-header">
      <text class="login-title">登录</text>
      <text class="close-btn" bindtap="closeLoginModal">×</text>
    </view>
    
    <view class="login-content">
      <button class="wechat-login-btn" bindtap="wechatLogin">
        微信授权登录
      </button>
      
      <button class="phone-login-btn" bindtap="goToPhoneLogin">
        手机号登录
      </button>
    </view>
  </view>
</view>
