.page { padding: 16px; background: #f7f8fa; min-height: 100vh; }
.section { background: #fff; border-radius: 8px; padding: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); margin-bottom: 16px; }
.section-title { font-size: 16px; font-weight: 600; color: #333; margin-bottom: 12px; padding-bottom: 8px; border-bottom: 1px solid #f0f0f0; }
.order-item { display: flex; align-items: center; padding: 10px 0; font-size: 14px; }
.order-item .label { color: #888; min-width: 80px; }
.order-item .value { color: #333; }
.status { font-size: 14px; }
.status.success { color: #16a34a; }
.status.failed { color: #ef4444; }
.status.paying { color: #f59e0b; }
.status.pending { color: #64748b; }
.amount-item { display: flex; justify-content: space-between; align-items: center; padding: 10px 0; font-size: 14px; }
.amount-item .label { color: #666; }
.amount-item .value { color: #333; font-weight: 600; }
.actions-bar { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; padding: 12px 16px; box-shadow: 0 -4px 24px rgba(0,0,0,0.06); display: flex; gap: 12px; }
.action-btn { flex: 1; padding: 12px 0; border-radius: 8px; text-align: center; font-size: 15px; }
.pay-btn { background: #07c160; color: #fff; }

