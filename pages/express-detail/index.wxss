/* pages/express-detail/index.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 进度条区域 */
.progress-section {
  flex-shrink: 0;
  background: #fff;
  padding: 40rpx 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.progress-wrapper {
  position: relative;
  padding: 0 20rpx;
}

/* 进度节点容器 */
.progress-nodes {
  display: flex;
  justify-content: space-between;
  position: relative;
  align-items: flex-start;
}

.progress-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.node-container {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 16rpx;
}

.node-line {
  flex: 1;
  height: 4rpx;
  background: #e5e6eb;
}

.node-line.completed {
  background: #09ccb5;
}

.node-line.pending {
  background: #e5e6eb;
}

.node-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 3rpx solid #e5e6eb;
  position: relative;
  z-index: 2;
  flex-shrink: 0;
  margin: 0 8rpx;
}

/* 已完成的节点：绿色实心 */
.progress-node.completed .node-dot {
  background: #09ccb5;
  border-color: #09ccb5;
  width: 32rpx;
  height: 32rpx;
}

/* 当前进行中的节点：空心（只有边框） */
.progress-node.active .node-dot {
  background: #fff;
  border: 3rpx solid #09ccb5;
  width: 32rpx;
  height: 32rpx;
  box-shadow: 0 0 0 4rpx rgba(9, 204, 181, 0.1);
}

/* 未走到的节点：浅色实心 */
.progress-node.pending .node-dot {
  background: #e5e6eb;
  border-color: #e5e6eb;
  width: 32rpx;
  height: 32rpx;
}

.node-label {
  font-size: 24rpx;
  text-align: center;
  line-height: 1.4;
  color: #999;
  margin-top: 4rpx;
  width: 100%;
}

/* 已完成节点的文字：深色 */
.progress-node.completed .node-label {
  color: #111;
  font-weight: 500;
}

/* 当前进行中节点的文字：深色 */
.progress-node.active .node-label {
  color: #111;
  font-weight: 500;
}

/* 未走到节点的文字：浅色 */
.progress-node.pending .node-label {
  color: #999;
  font-weight: 400;
}

/* 业务员信息（进度条下方） */
.courier-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.courier-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.courier-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #eee;
  margin-right: 20rpx;
}

.courier-text {
  flex: 1;
  min-width: 0;
}

.courier-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.courier-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}

.courier-rating {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 24rpx;
  color: #ffd700;
}

.courier-desc {
  font-size: 24rpx;
  color: #999;
}

.courier-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.phone-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phone-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 时间线（可滚动区域） */
.timeline-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 时间线 */
.timeline-section {
  background: #fff;
  padding: 0 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

.timeline-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.timeline-item:first-child {
  padding-top: 32rpx;
}

.timeline-item:last-child {
  border-bottom: none;
  padding-bottom: 32rpx;
}

.timeline-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  position: relative;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e5e6eb;
  border: 3rpx solid #e5e6eb;
  flex-shrink: 0;
  position: relative;
  z-index: 2;
}

.timeline-dot.completed {
  background: #09ccb5;
  border-color: #09ccb5;
}

.timeline-dot.waiting {
  background: #fff;
  border: 3rpx solid #09ccb5;
}

.timeline-dot.disabled {
  background: #e5e6eb;
  border-color: #e5e6eb;
}

.timeline-dot.cancelled {
  background: #ff4757;
  border-color: #ff4757;
}

.timeline-line {
  width: 2rpx;
  flex: 1;
  background: #e5e6eb;
  margin-top: 8rpx;
  min-height: 40rpx;
}

.timeline-content {
  flex: 1;
  min-width: 0;
  padding-top: 0;
}

.timeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  flex: 1;
}

.timeline-title.cancelled {
  color: #ff4757;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.urgent-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #fff3cd;
  color: #856404;
  border-radius: 4rpx;
  font-size: 22rpx;
  margin-top: 8rpx;
}

.timeline-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-item {
  display: flex;
  font-size: 26rpx;
  line-height: 1.6;
}

.info-label {
  color: #999;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.info-value.price {
  color: #ff4757;
  font-weight: 600;
}

.info-value.discount {
  color: #09ccb5;
  font-weight: 600;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.info-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}

/* 价格组成信息 */
.price-breakdown {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
}

.breakdown-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 16rpx;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 26rpx;
}

.breakdown-item.subtotal {
  border-top: 1rpx solid #e5e6eb;
  margin-top: 12rpx;
  padding-top: 16rpx;
  font-weight: 600;
}

.breakdown-label {
  color: #666;
}

.breakdown-value {
  color: #333;
  font-weight: 500;
}

.breakdown-value.positive {
  color: #09ccb5;
}

.breakdown-value.negative {
  color: #ff4757;
}

.breakdown-value.reason {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
}

.breakdown-value.price {
  color: #ff4757;
  font-weight: 600;
}

/* 操作按钮区域 */
.actions-bar {
  flex-shrink: 0;
  padding: 24rpx;
  background: #fff;
  border-top: 1rpx solid #e5e6eb;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.action-btn.pay-btn {
  background: #09ccb5;
  color: #fff;
}

.action-btn.cancel-payment-btn {
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
}

.action-btn.cancel-btn {
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
}

.action-btn::after {
  border: none;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}
