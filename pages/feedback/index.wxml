<view class="page">
  <view class="form">
    <view class="form-item">
      <text class="label">您的称呼</text>
      <input class="input" placeholder="请输入您的称呼" value="{{name}}" bindinput="onNameInput" />
    </view>

    <view class="form-item">
      <text class="label">您的性别</text>
      <view class="gender-group">
        <view class="gender-item {{gender === 'male' ? 'active' : ''}}" bindtap="selectGender" data-gender="male">
          <text class="gender-text">男</text>
        </view>
        <view class="gender-item {{gender === 'female' ? 'active' : ''}}" bindtap="selectGender" data-gender="female">
          <text class="gender-text">女</text>
        </view>
      </view>
    </view>

    <view class="form-item">
      <text class="label">您的联系方式</text>
      <input class="input" placeholder="请输入手机号" value="{{phone}}" bindinput="onPhoneInput" type="number" maxlength="11" />
    </view>

    <view class="form-item">
      <text class="label">您的反馈内容</text>
      <textarea class="textarea" placeholder="请输入您的反馈内容" value="{{content}}" bindinput="onContentInput" maxlength="500" />
      <view class="char-count">{{content.length}}/500</view>
    </view>
  </view>

  <view class="bottom-bar">
    <button class="submit-btn" bindtap="submitFeedback" disabled="{{submitting}}">
      <text class="btn-text">{{submitting ? '提交中...' : '提交反馈'}}</text>
    </button>
  </view>
</view>

