.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

.form {
  padding: 16rpx;
}

.form-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.label {
  font-size: 28rpx;
  color: #111;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
}

.textarea {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
  min-height: 200rpx;
  resize: none;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #8a8a8e;
  margin-top: 8rpx;
}

.gender-group {
  display: flex;
  gap: 16rpx;
  margin-top: 12rpx;
}

.gender-item {
  flex: 1;
  height: 72rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.3s;
}

.gender-item.active {
  border-color: #07c160;
  background: #f0f9f4;
}

.gender-text {
  font-size: 28rpx;
  color: #333;
}

.gender-item.active .gender-text {
  color: #07c160;
  font-weight: 600;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 16rpx 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
}

.btn-text {
  font-size: 28rpx;
}

