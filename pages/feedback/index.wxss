.page{
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
  padding-bottom: 140rpx;
}

.form-card{
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 24rpx;
}

.form-item{
  display: flex;
  align-items: flex-start;
  padding: 32rpx 24rpx;
  min-height: 48rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child{
  border-bottom: none;
}

.form-item.textarea-item{
  align-items: flex-start;
}

.label{
  font-size: 28rpx;
  color: #111;
  font-weight: 400;
  flex-shrink: 0;
  margin-right: 32rpx;
  width: 160rpx;
  text-align: left;
  line-height: 1.5;
  padding-top: 4rpx;
}

.input{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
  text-align: left;
  min-width: 0;
  line-height: 1.5;
  padding: 0;
}

.textarea-wrapper{
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.textarea{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
  min-height: 200rpx;
  line-height: 1.5;
  padding: 0;
  width: 100%;
  resize: none;
}

.char-count{
  text-align: right;
  font-size: 24rpx;
  color: #8a8a8e;
  margin-top: 12rpx;
}

.bottom-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f5f5f5;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 20rpx;
}

.submit-btn{
  flex: 1;
  height: 88rpx;
  background: #09ccb5;
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  border: none;
}

.submit-btn[disabled]{
  background: #ccc;
  color: #999;
}

.submit-btn::after{
  border: none;
}

.btn-text{
  font-size: 32rpx;
}
