/* pages/conversation-list/index.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.conversation-list {
  padding: 0;
}

.conversation-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.conversation-item:first-child {
  border-top: 1rpx solid #f0f0f0;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.content {
  flex: 1;
  min-width: 0;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  color: #111;
  line-height: 1.5;
}

.time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.message {
  font-size: 28rpx;
  color: #555555;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.5;
}

.message.unread {
  font-weight: 500;
  color: #111;
}

.badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 10rpx;
  background-color: #ff4757;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.empty {
  margin: 120rpx auto 0;
  width: 80%;
  text-align: center;
  color: #8a8a8e;
  font-size: 28rpx;
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
