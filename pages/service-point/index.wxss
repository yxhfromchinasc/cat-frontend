page {
  height: 100vh;
  background: #f5f5f5;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* New Address Selector Styles */
.address-selector {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  /* right: 10rpx; */ /* Removed to prevent stretching */
  max-width: 70vw; /* Set a max width */
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 16rpx 20rpx;
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

.add-address-btn {
  text-align: center;
  color: #007aff;
  font-size: 28rpx;
  font-weight: 500;
  height: 70rpx;
  line-height: 70rpx;
  cursor: pointer;
}

.selected-address-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 70rpx;
}

.selected-address-info {
  flex: 1;
  min-width: 0;
  padding-right: 10rpx;
}

.selected-address-main {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.selected-address-sub {
  font-size: 22rpx;
  color: #888;
  margin-top: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.address-selector-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

.map-container {
  flex: 1;
  width: 100%;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.loading-content {
  padding: 30rpx 50rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #333333;
}

.point-list {
  width: 100%;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 33vh; /* 固定占据屏幕下方 1/3 区域 */
  display: flex;
  flex-direction: column;
  z-index: 10;
}

.point-layer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.list-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.list-content {
  flex: 1;
  max-height: calc(33vh - 100rpx); /* 列表区域内部可滚动 */
}

.point-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.point-item:last-child {
  border-bottom: none;
}

.point-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.point-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.point-address {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.point-contact {
  font-size: 24rpx;
  color: #999999;
}

.point-arrow {
  font-size: 32rpx;
  color: #cccccc;
  margin-left: 20rpx;
}

.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  padding: 30rpx 50rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
}
