/* pages/payment/index.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 24rpx;
}

/* 通用区块 */
.section {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 订单信息 */
.order-info {
}

.order-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.order-item .label {
  color: #999;
  min-width: 160rpx;
  flex-shrink: 0;
}

.order-item .value {
  color: #333;
  flex: 1;
}

/* 金额明细 */
.amount-info {
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.amount-item .label {
  color: #666;
}

.amount-item .value {
  color: #333;
}

.amount-item .value.discount {
  color: #ff4757;
}

.amount-item.final {
  margin-top: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.amount-item.final .label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.amount-item.final .value.final-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff4757;
}

/* 优惠券选择 */
.coupon-section {
}

.coupon-selector {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  position: relative;
}

.coupon-info {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 16rpx;
}

.coupon-left {
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.coupon-left-small {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
}

.coupon-type-badge-small {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
  margin-bottom: 8rpx;
}

.coupon-type-icon-small {
  font-size: 20rpx;
  margin-right: 2rpx;
}

.coupon-type-text-small {
  font-size: 18rpx;
  color: #fff;
  font-weight: 500;
}

.coupon-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4757;
  margin-bottom: 8rpx;
}

.coupon-value-small {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.coupon-condition {
  font-size: 24rpx;
  color: #999;
}

.coupon-condition-small {
  font-size: 22rpx;
  color: #666;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coupon-right-small {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.coupon-name-small {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.remove-coupon {
  font-size: 24rpx;
  color: #07c160;
  text-decoration: underline;
}

.coupon-placeholder {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

.coupon-placeholder-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-count {
  font-size: 24rpx;
  color: #07c160;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 优惠券列表 */
.coupon-list {
  margin-top: 12rpx;
  max-height: 500rpx;
  overflow-y: auto;
}

.coupon-item {
  margin-bottom: 12rpx;
}

.coupon-item:last-child {
  margin-bottom: 0;
}

.coupon-card {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
  min-height: 140rpx;
}

.coupon-card-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.coupon-left {
  flex: 0 0 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 16rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(250, 250, 250, 0.95) 100%);
  position: relative;
}

.coupon-type-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
  margin-bottom: 8rpx;
}

.coupon-type-icon {
  font-size: 20rpx;
  margin-right: 3rpx;
}

.coupon-type-text {
  font-size: 18rpx;
  color: #fff;
  font-weight: 500;
}

.coupon-main-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
  margin: 4rpx 0;
}

.coupon-subtitle {
  font-size: 20rpx;
  color: #999;
  margin-top: 2rpx;
}

.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 16rpx 20rpx;
  border-left: 2rpx dashed #e0e0e0;
  min-height: 0;
}

.coupon-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-condition {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.coupon-expired {
  font-size: 20rpx;
  color: #ff9800;
  margin-top: 2rpx;
}

.empty-coupon {
  margin-top: 16rpx;
  padding: 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 支付方式 */
.payment-section {
}

.payment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
}

.payment-item:last-child {
  margin-bottom: 0;
}

.payment-item.selected {
  background: #fff;
  border-color: #07c160;
}

.payment-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.payment-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.payment-name {
  font-size: 28rpx;
  color: #333;
}

.payment-balance {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.payment-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

/* 支付按钮栏 */
.payment-bar {
  flex-shrink: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.payment-summary {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  min-width: 0;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.summary-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4757;
}

.summary-main {
  display: flex;
  align-items: baseline;
}

.summary-remain {
  margin-top: 6rpx;
  display: flex;
  align-items: center;
}

.summary-remain-label {
  font-size: 24rpx;
  color: #999;
}

.summary-remain-time {
  font-size: 24rpx;
  color: #ff4757;
  margin-left: 6rpx;
}

.payment-buttons {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
  min-width: 240rpx;
}

.primary-buttons {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.pay-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: normal;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
}

.pay-btn.primary-btn {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
}

.pay-btn:disabled {
  background: #ccc;
  color: #999;
}

/* 移除小程序 button 默认边框效果，确保视觉对齐 */
.pay-btn::after {
  border: none;
}

.secondary-buttons {
  margin-top: 12rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.cancel-btn-text {
  font-size: 28rpx;
  color: #999;
  padding: 8rpx 16rpx;
  line-height: 1.5;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

/* 自定义倒计时覆盖层动画 */
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 备选类（若后续改为使用类名而非内联样式） */
.spinner {
  width: 72rpx;
  height: 72rpx;
  border: 6rpx solid #eaeaea;
  border-top-color: #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

