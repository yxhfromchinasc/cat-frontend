.recharge-page {
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #888;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #555;
}

.input {
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.pay-btn {
  margin-top: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.quick-amounts {
  display: flex;
  gap: 16rpx;
  margin: 12rpx 0 8rpx;
}

.tips {
  margin-top: 28rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1.8;
}


