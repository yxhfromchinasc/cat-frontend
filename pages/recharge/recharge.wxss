.recharge-page {
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #888;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #555;
}

.selected-amount {
  border: 2rpx solid #07c160;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #f0f9f4;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.selected-amount-text {
  font-size: 32rpx;
  color: #07c160;
  font-weight: 500;
}

.selected-amount-placeholder {
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.pay-btn {
  margin-top: 48rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border: none;
}

.quick-amounts {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 24rpx 0 16rpx;
}

.amount-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  background-color: #fff;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s;
}

.amount-btn.active {
  border-color: #07c160;
  background-color: #07c160;
  color: #fff;
  font-weight: 500;
}

.tips {
  margin-top: 28rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1.8;
}

/* 支付加载倒计时遮罩 */
.payment-loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.payment-loading-content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}


