<view class="recharge-page">
  <view class="header">
    <text class="title">余额充值</text>
    <text class="subtitle">仅小程序支付</text>
  </view>

  <view class="form">
    <view class="form-item">
      <text class="label">充值金额（元）</text>
      <input class="input" type="digit" placeholder="请输入金额，如 1.00" bindinput="onAmountInput" value="{{amount}}" />
    </view>
    <view class="quick-amounts">
      <button wx:for="{{rechargeAmounts}}" wx:key="*this" size="mini" bindtap="onQuickPick" data-val="{{item}}">¥{{item}}</button>
    </view>
    <button class="pay-btn" type="primary" loading="{{submitting}}" disabled="{{!canSubmit || submitting}}" bindtap="onPay">立即支付</button>
  </view>

  <view class="tips">
    <text>· 金额须为正数，最多两位小数</text>
    <text>· 支付结果以订单查询为准</text>
  </view>
</view>

<!-- 支付加载倒计时遮罩 -->
<view class="payment-loading-mask" wx:if="{{showPaymentLoading}}">
  <view class="payment-loading-content">
    <view class="loading-spinner"></view>
    <text class="loading-text">确认支付结果... {{paymentLoadingCountdown}}秒</text>
  </view>
</view>


