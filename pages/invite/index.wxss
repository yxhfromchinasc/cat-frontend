/* pages/invite/index.wxss */
.invite-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 上半部分：邀请奖励介绍 */
.invite-intro {
  flex-shrink: 0;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a3 100%);
  padding: 60rpx 32rpx 40rpx;
  color: #fff;
}

.intro-title {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 24rpx;
}

.intro-content {
  font-size: 26rpx;
  text-align: center;
  opacity: 0.9;
  margin-bottom: 48rpx;
}

/* 返现规则卡片 */
.reward-rules-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
}

.rules-title {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32rpx;
  color: #fff;
}

.rules-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.rule-step {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  flex-shrink: 0;
}

.rule-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.rule-text-bold {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.rule-text-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.rule-item-reward {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 8rpx;
}

.reward-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.reward-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #f4ea29;
  margin-top: 4rpx;
}

/* 分享按钮组 */
.share-buttons {
  display: flex;
  gap: 16rpx;
}

/* 分享按钮 */
.share-btn {
  flex: 1;
  height: 88rpx;
  background: #fff;
  color: #09ccb5;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-top: 0;
}

.share-btn::after {
  border: none;
}

.share-text {
  color: #09ccb5;
}

/* 下半部分：邀请记录列表 */
.invite-records {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  overflow: hidden;
  margin-top: -24rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 24rpx;
}

.records-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 28rpx;
  color: #111;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.record-phone {
  font-size: 24rpx;
  color: #8a8a8e;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #09ccb5;
}

.record-status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-1,
.status-2 {
  background: #fff3cd;
  color: #856404;
}

.status-3 {
  background: #d4edda;
  color: #155724;
}

.status-4 {
  background: #f8d7da;
  color: #721c24;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  color: #8a8a8e;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #b0b0b0;
  font-size: 24rpx;
}

/* 空状态 */
.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #8a8a8e;
}

/* 分享到朋友圈提示遮罩 */
.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}

/* 右上角指向图片容器（类似 guide_point.png） */
.guide-point {
  position: absolute;
  top: -20rpx;
  right: 0;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 0 100rpx 0 0;
}

/* 箭头图标图片 */
.arrow-icon-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 0 10rpx rgba(255, 255, 255, 0.8));
}

/* 顶部提示文字 */
.tip-text-top {
  color: #f4ea29;
  font-size: 56rpx;
  font-weight: 400;
  font-style: normal;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.8), 0 0 20rpx rgba(244, 234, 41, 0.3);
  margin-top: 10rpx;
  position: relative;
  left: 50rpx;
  display: flex;
  flex-direction: column;
  line-height: 1.4;
  letter-spacing: 4rpx;
  transform: scale(1);
}

.tip-line {
  display: block;
  white-space: nowrap;
}

/* 确认按钮 */
.guide-btn {
  margin-top: 40rpx;
  position: relative;
  left: 2%;
  transform: translateX(-50%);
  border: 4rpx solid #f4ea29;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm-text {
  font-size: 36rpx;
  color: #f4ea29;
  font-weight: 600;
}
