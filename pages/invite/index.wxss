/* pages/invite/index.wxss */
.invite-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f8fa;
  overflow: hidden;
}

/* 上半部分：邀请奖励介绍 */
.invite-intro {
  flex-shrink: 0;
  background: linear-gradient(135deg, #09ccb5 0%, #08b8a3 100%);
  padding: 60rpx 32rpx 40rpx;
  color: #fff;
}

.intro-title {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 24rpx;
}

.intro-content {
  font-size: 26rpx;
  text-align: center;
  opacity: 0.9;
  margin-bottom: 48rpx;
}

/* 邀请码展示区域 */
.invite-code-section {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.code-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.code-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.code-value {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
  flex: 1;
}

.copy-btn {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  margin-left: 24rpx;
}

.copy-text {
  font-size: 24rpx;
  color: #fff;
}

/* 分享按钮 */
.share-btn {
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #09ccb5;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-top: 0;
}

.share-btn::after {
  border: none;
}

.share-text {
  color: #09ccb5;
}

/* 下半部分：邀请记录列表 */
.invite-records {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  overflow: hidden;
  margin-top: -24rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
  margin-bottom: 24rpx;
}

.records-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 28rpx;
  color: #111;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.record-phone {
  font-size: 24rpx;
  color: #8a8a8e;
}

.record-status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-1,
.status-2 {
  background: #fff3cd;
  color: #856404;
}

.status-3 {
  background: #d4edda;
  color: #155724;
}

.status-4 {
  background: #f8d7da;
  color: #721c24;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  color: #8a8a8e;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #b0b0b0;
  font-size: 24rpx;
}

/* 空状态 */
.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #8a8a8e;
}
