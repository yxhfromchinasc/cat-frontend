/* pages/withdraw-operate/index.wxss - 提现操作页样式（类似支付页） */
.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 160rpx;
}

/* 通用区块 */
.section {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 订单信息 */
.order-info {
}

.order-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item .label {
  color: #999;
  min-width: 160rpx;
  flex-shrink: 0;
}

.order-item .value {
  color: #333;
  flex: 1;
}

.order-item .value.status {
  color: #667eea;
  font-weight: 500;
}

/* 金额明细 */
.amount-info {
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.amount-item .label {
  color: #666;
}

.amount-item .value {
  color: #333;
}

.amount-item.final {
  margin-top: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.amount-item.final .label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.amount-item.final .value.final-amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff4757;
}

/* 提示信息 */
.tips-section {
}

.tips-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tips-dot {
  color: #999;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.tips-text {
  color: #666;
  flex: 1;
}

/* 提现按钮栏 */
.payment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 32rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.payment-summary {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.summary-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4757;
}

.summary-main {
  display: flex;
  align-items: baseline;
}

.summary-remain {
  margin-top: 6rpx;
  display: flex;
  align-items: center;
}

.summary-remain-label {
  font-size: 24rpx;
  color: #999;
}

.summary-remain-time {
  font-size: 24rpx;
  color: #ff4757;
  margin-left: 6rpx;
}

.pay-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: normal;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  background: #667eea;
  border-radius: 44rpx;
  border: none;
}

.pay-btn:disabled {
  background: #ccc;
  color: #999;
}

.pay-btn.cancel-btn {
  background: #f5f5f5;
  color: #333;
}

/* 移除小程序 button 默认边框效果 */
.pay-btn::after {
  border: none;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

