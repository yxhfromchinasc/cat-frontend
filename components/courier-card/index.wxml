<view class="courier-card" wx:if="{{name}}">
  <view class="courier-info">
    <image class="courier-avatar" src="{{avatarUrl || '/assets/tabbar/profile.png'}}" mode="aspectFill" />
    <view class="courier-text">
      <view class="courier-row" wx:if="{{ratingArray && ratingArray.length}}">
        <text class="courier-name">{{name}}</text>
        <view class="courier-rating">
          <text class="star" wx:for="{{ratingArray}}" wx:key="*this">★</text>
        </view>
      </view>
      <view class="courier-row" wx:else>
        <text class="courier-name">{{name}}</text>
      </view>
      <text class="courier-desc">{{roleDesc}}</text>
    </view>
  </view>
  <view class="courier-actions" wx:if="{{phone || (courierId && showContact)}}">
    <view class="phone-btn" wx:if="{{phone}}" bindtap="onCallTap">
      <image class="phone-icon" src="/assets/tabbar/call.png" mode="aspectFit" />
    </view>
    <view class="contact-btn-small" wx:if="{{courierId && showContact}}" bindtap="onContactTap">
      <image class="contact-icon-small" src="/assets/tabbar/会话.svg" mode="aspectFit" />
    </view>
  </view>
</view>
