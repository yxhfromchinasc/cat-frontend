/* 小哥卡片：快递/回收/大件清运详情共用 */
.courier-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.courier-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.courier-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #eee;
  margin-right: 20rpx;
}

.courier-text {
  flex: 1;
  min-width: 0;
}

.courier-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.courier-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
}

.courier-rating {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 24rpx;
  color: #ffd700;
}

.courier-desc {
  font-size: 24rpx;
  color: #999;
}

.courier-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.phone-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phone-icon {
  width: 32rpx;
  height: 32rpx;
}

.contact-btn-small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-icon-small {
  width: 36rpx;
  height: 36rpx;
}
