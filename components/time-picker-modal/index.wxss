.time-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 9999;
  pointer-events: auto;
}

.time-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.time-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-picker-cancel {
  font-size: 28rpx;
  color: #666;
}

.time-picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #111;
}

.time-picker-confirm {
  font-size: 28rpx;
  color: #09ccb5;
}

.time-picker-body {
  display: flex;
  height: 800rpx;
  overflow: hidden;
  flex: 1;
  min-height: 0;
}

/* 左侧日期列：使用 scroll-view 保证安卓可滚动 */
.time-picker-left {
  width: 200rpx;
  height: 800rpx;
  border-right: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  box-sizing: border-box;
}

.time-picker-date-item {
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-picker-date-item.active {
  color: #09ccb5;
  background: #f0f9f4;
}

/* 右侧时间段列：使用 scroll-view 保证安卓可滚动 */
.time-picker-right {
  flex: 1;
  height: 800rpx;
  min-width: 0;
  position: relative;
  box-sizing: border-box;
}

.time-picker-bottom-spacer {
  height: 300rpx;
  flex-shrink: 0;
}

.time-picker-empty {
  min-height: 800rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
}

.time-picker-time-item {
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.time-picker-time-item.active {
  color: #09ccb5;
  background: #f0f9f4;
}

.time-picker-time-item.disabled {
  color: #ccc;
  text-decoration: line-through;
}

